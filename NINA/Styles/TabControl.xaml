<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:NINA.Styles">





    <Style TargetType="{x:Type TabItem}" x:Key="LeftTabItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">

                    <Grid  Margin="0,1,0,0">


                        <Grid Name="Panel">
                            <ContentPresenter 
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        />
                        </Grid>
                        <Rectangle x:Name="icon" Fill="{StaticResource ButtonBackgroundSelectedBrush}" Visibility="Hidden" Width="7.5" HorizontalAlignment="Right"/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Panel" Property="Background" Value="{StaticResource ButtonBackgroundBrush}" />
                            <Setter TargetName="icon" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="False">
                            <Setter TargetName="Panel" Property="Background" Value="{StaticResource ButtonBackgroundBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type TabItem}" x:Key="TopTabItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                    <Grid  Margin="0,1,0,0">
                        <Grid Name="Panel">
                            <ContentPresenter 
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    ContentSource="Header"
                                    Margin="10,2"/>

                        </Grid>
                        <Rectangle x:Name="icon" Fill="{StaticResource ButtonBackgroundSelectedBrush}" Visibility="Hidden" Height="3" VerticalAlignment="Bottom"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Panel" Property="Background" Value="{StaticResource ButtonBackgroundBrush}" />
                            <Setter TargetName="icon" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="False">
                            <Setter TargetName="Panel" Property="Background" Value="{StaticResource ButtonBackgroundBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <ControlTemplate x:Key="LeftTabTemplate" TargetType="TabControl">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <ContentPresenter Margin="2 0 0 0" Grid.Column="1" x:Name="ContentPresenter"
                                            VerticalAlignment="Stretch"
                                            HorizontalAlignment="Stretch"
                                            ContentSource="SelectedContent"  />
            <TabPanel IsItemsHost="true"  HorizontalAlignment="Left" MinWidth="80" />
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="TopTabTemplate" TargetType="TabControl">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>            
            <Border Margin="0 2 0 0" Grid.Row="1" BorderThickness="1" BorderBrush="{StaticResource BorderBrush}">
                <ContentPresenter  x:Name="ContentPresenter"
                                            VerticalAlignment="Stretch"
                                            HorizontalAlignment="Stretch"
                                            ContentSource="SelectedContent" />
            </Border>
            <TabPanel IsItemsHost="true" VerticalAlignment="Top"  />
        </Grid>
    </ControlTemplate>



    <Style TargetType="{x:Type TabControl}">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
        <Style.Triggers>
            <Trigger Property="TabStripPlacement" Value="Left">
                <Setter Property="Template" 
						Value="{StaticResource LeftTabTemplate}" />
                <Setter Property="ItemContainerStyle" Value="{StaticResource LeftTabItem}" />
            </Trigger>
            <Trigger Property="TabStripPlacement" Value="Top">
                <Setter Property="Template" 
						Value="{StaticResource TopTabTemplate}" />
                <Setter Property="ItemContainerStyle" Value="{StaticResource TopTabItem}" />
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>