<Application x:Class="NINA.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:NINA.ViewModel"
             xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options" 
             xmlns:util ="clr-namespace:NINA.Utility"                                  
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries >                
                <!-- SVG Files -->
                <ResourceDictionary Source="/NINA;component/Resources/SVGDictionary.xaml" />
                
                <!-- Static Resources -->
                <ResourceDictionary Source="StaticResources\ViewModels.xaml" />
                <ResourceDictionary Source="StaticResources\Brushes.xaml" />
                <ResourceDictionary Source="StaticResources\Converters.xaml" />
                
                <!-- UI Styles -->
                <ResourceDictionary Source="Styles\Window.xaml" />
                <ResourceDictionary Source="Styles\TextBlock.xaml" />
                <ResourceDictionary Source="Styles\TextBox.xaml" />
                <ResourceDictionary Source="Styles\TabControl.xaml" />
                <ResourceDictionary Source="Styles\CheckBox.xaml" />
                <ResourceDictionary Source="Styles\DataGrid.xaml" />
                <ResourceDictionary Source="Styles\ListView.xaml" />
                <ResourceDictionary Source="Styles\GroupBox.xaml" />
                <ResourceDictionary Source="Styles\Button.xaml" />
                <ResourceDictionary Source="Styles\RepeatButton.xaml" />
                <ResourceDictionary Source="Styles\ToggleButton.xaml" />
                <ResourceDictionary Source="Styles\Slider.xaml" />
                <ResourceDictionary Source="Styles\Expander.xaml" />
                <ResourceDictionary Source="Styles\ScrollViewer.xaml" />
                <ResourceDictionary Source="Styles\ComboBox.xaml" />
                <ResourceDictionary Source="Styles\GridSplitter.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
