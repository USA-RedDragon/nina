<UserControl x:Class="NINA.View.PolarScopeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NINA.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Width="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}">
        
        <Grid>
            <Ellipse 
		     HorizontalAlignment="Center"
		      Fill="{StaticResource BackgroundBrush}"
		     Margin="0"
		     Stroke="{StaticResource PrimaryBrush}"
                StrokeThickness="4"
		     VerticalAlignment="Center"
		     Stretch="UniformToFill" />

            

            <Grid Margin="20">

                <Line Y1="0" Y2="1" Stretch="Fill" Stroke="{StaticResource PrimaryBrush}" StrokeThickness="1" Margin="0" RenderTransformOrigin="0.5,0.5" StrokeDashArray="2 2">
                    <Line.RenderTransform>
                        <RotateTransform  Angle="-15"></RotateTransform>
                    </Line.RenderTransform>
                </Line>
                <Line Y1="0" Y2="1" Stretch="Fill" Stroke="{StaticResource PrimaryBrush}" StrokeThickness="1" Margin="0" RenderTransformOrigin="0.5,0.5" StrokeDashArray="2 2">
                    <Line.RenderTransform>
                        <RotateTransform  Angle="-30"></RotateTransform>
                    </Line.RenderTransform>
                </Line>
                <Line Y1="0" Y2="1" Stretch="Fill" Stroke="{StaticResource PrimaryBrush}" StrokeThickness="1" Margin="0" RenderTransformOrigin="0.5,0.5" StrokeDashArray="2 2">
                    <Line.RenderTransform>
                        <RotateTransform  Angle="-45"></RotateTransform>
                    </Line.RenderTransform>
                </Line>
                <Line Y1="0" Y2="1" Stretch="Fill" Stroke="{StaticResource PrimaryBrush}" StrokeThickness="1" Margin="0" RenderTransformOrigin="0.5,0.5" StrokeDashArray="2 2">
                    <Line.RenderTransform>
                        <RotateTransform  Angle="-60"></RotateTransform>
                    </Line.RenderTransform>
                </Line>
                <Line Y1="0" Y2="1" Stretch="Fill" Stroke="{StaticResource PrimaryBrush}" StrokeThickness="1" Margin="0" RenderTransformOrigin="0.5,0.5" StrokeDashArray="2 2">
                    <Line.RenderTransform>
                        <RotateTransform  Angle="-75"></RotateTransform>
                    </Line.RenderTransform>
                </Line>
                <Line Y1="0" Y2="1" Stretch="Fill" Stroke="{StaticResource PrimaryBrush}" StrokeThickness="1" Margin="0" RenderTransformOrigin="0.5,0.5" StrokeDashArray="2 2">
                    <Line.RenderTransform>
                        <RotateTransform  Angle="-90"></RotateTransform>
                    </Line.RenderTransform>
                </Line>
                <Line Y1="0" Y2="1" Stretch="Fill" Stroke="{StaticResource PrimaryBrush}" StrokeThickness="1" Margin="0" RenderTransformOrigin="0.5,0.5" StrokeDashArray="2 2">
                    <Line.RenderTransform>
                        <RotateTransform  Angle="-105"></RotateTransform>
                    </Line.RenderTransform>
                </Line>
                <Line Y1="0" Y2="1" Stretch="Fill" Stroke="{StaticResource PrimaryBrush}" StrokeThickness="1" Margin="0" RenderTransformOrigin="0.5,0.5" StrokeDashArray="2 2">
                    <Line.RenderTransform>
                        <RotateTransform  Angle="-120"></RotateTransform>
                    </Line.RenderTransform>
                </Line>
                <Line Y1="0" Y2="1" Stretch="Fill" Stroke="{StaticResource PrimaryBrush}" StrokeThickness="1" Margin="0" RenderTransformOrigin="0.5,0.5" StrokeDashArray="2 2">
                    <Line.RenderTransform>
                        <RotateTransform  Angle="-135"></RotateTransform>
                    </Line.RenderTransform>
                </Line>
                <Line Y1="0" Y2="1" Stretch="Fill" Stroke="{StaticResource PrimaryBrush}" StrokeThickness="1" Margin="0" RenderTransformOrigin="0.5,0.5" StrokeDashArray="2 2">
                    <Line.RenderTransform>
                        <RotateTransform  Angle="-150"></RotateTransform>
                    </Line.RenderTransform>
                </Line>
                <Line Y1="0" Y2="1" Stretch="Fill" Stroke="{StaticResource PrimaryBrush}" StrokeThickness="1" Margin="0" RenderTransformOrigin="0.5,0.5" StrokeDashArray="2 2">
                    <Line.RenderTransform>
                        <RotateTransform  Angle="-165"></RotateTransform>
                    </Line.RenderTransform>
                </Line>
                <Line Y1="0" Y2="1" Stretch="Fill" Stroke="{StaticResource PrimaryBrush}" StrokeThickness="1" Margin="0" RenderTransformOrigin="0.5,0.5" StrokeDashArray="2 2">
                    <Line.RenderTransform>
                        <RotateTransform  Angle="-180"></RotateTransform>
                    </Line.RenderTransform>
                </Line>

            </Grid>
            
            <Ellipse 
		     HorizontalAlignment="Center"
		      Fill="{StaticResource BackgroundBrush}"
		     Margin="41"
		     Stroke="{StaticResource PrimaryBrush}"
		     VerticalAlignment="Center"
		     Stretch="UniformToFill" />            
            

            <Grid RenderTransformOrigin=".5,.5">
                <Ellipse 
		     HorizontalAlignment="Center"
		      
		     Margin="20"
		     Stroke="{StaticResource PrimaryBrush}"
		     VerticalAlignment="Center"
		     Stretch="UniformToFill" />
                <Ellipse 
		     HorizontalAlignment="Center"
		     
		     Margin="41"
		     Stroke="{StaticResource PrimaryBrush}"
		     VerticalAlignment="Center"
		     
                Stretch="UniformToFill"
                />

                <Line X1="0" X2="1" Stretch="Fill" Stroke="{StaticResource PrimaryBrush}" StrokeThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center" >

                </Line>
                <Line Y1="0" Y2="1" Stretch="Fill" Stroke="{StaticResource PrimaryBrush}" StrokeThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center">

                </Line>

                <Grid RenderTransformOrigin="0.5,0.5" Margin="0,-1,0,1">
                    <Path Stroke="{StaticResource PrimaryBrush}" StrokeThickness="0" Margin="5,30,0,0" Fill="{StaticResource ButtonBackgroundBrush}" HorizontalAlignment="Center" VerticalAlignment="Top">
                        <Path.Data>
                            <EllipseGeometry 
                                
                            RadiusX="5" 
                            RadiusY="5" />
                        </Path.Data>
                    </Path>
                    <TextBlock Text="Polaris" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="16.5,80,0,0" TextOptions.TextFormattingMode="Display">
                        <TextBlock.RenderTransform>
                            <RotateTransform Angle="270" />
                        </TextBlock.RenderTransform>
                    </TextBlock>

                    <Grid.RenderTransform>
                        <TransformGroup>
                            <RotateTransform  Angle="{Binding Rotation}" />
                            <RotateTransform Angle="180" />
                        </TransformGroup>
                    </Grid.RenderTransform>
                </Grid>
            </Grid>

        </Grid>
        <TextBlock Text="{Binding HourAngleTime}" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        
    </Grid>
</UserControl>
