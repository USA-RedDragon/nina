                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Canvas>
                                        <TextBlock Text="{Binding Name}" Canvas.Top="{Binding TextPadding}" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" FontStyle="Italic">
                                            <Canvas.Left>
                                                <MultiBinding Converter="{StaticResource SubtractHalfConverter}">
                                                    <Binding Path="Position.X" />
                                                    <Binding Path="ActualWidth" RelativeSource="{RelativeSource Self}" />
                                                </MultiBinding>
                                            </Canvas.Left>
                                            <TextBlock.Foreground>
                                                <SolidColorBrush>
                                                    <SolidColorBrush.Color>
                                                        <Color
                                                            A="128"
                                                            B="0"
                                                            G="215"
                                                            R="255" />
                                                    </SolidColorBrush.Color>
                                                </SolidColorBrush>
                                            </TextBlock.Foreground>
                                        </TextBlock>
                                        <Path>
                                            <Path.Fill>
                                                <SolidColorBrush>
                                                    <SolidColorBrush.Color>
                                                        <Color
                                                            A="128"
                                                            B="255"
                                                            G="255"
                                                            R="255" />
                                                    </SolidColorBrush.Color>
                                                </SolidColorBrush>
                                            </Path.Fill>
                                            <Path.Data>
                                                <EllipseGeometry Center="{Binding Position}" RadiusX="{Binding Radius}" RadiusY="{Binding Radius}" />
                                            </Path.Data>
                                        </Path>
                                    </Canvas>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <ItemsControl ItemsSource="{Binding Points}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Canvas>
                                        <Line X1="{Binding Item1.Position.X}" X2="{Binding Item2.Position.X}" Y1="{Binding Item1.Position.Y}" Y2="{Binding Item2.Position.Y}" StrokeThickness="1">
                                            <Line.Stroke>
                                                <SolidColorBrush>
                                                    <SolidColorBrush.Color>
                                                        <Color
                                                            A="128"
                                                            B="0"
                                                            G="255"
                                                            R="0" />
                                                    </SolidColorBrush.Color>
                                                </SolidColorBrush>
                                            </Line.Stroke>
                                        </Line>
                                    </Canvas>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Canvas>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <ItemsControl ItemsSource="{Binding SkyMapAnnotator.ConstellationBoundariesInViewPort}" Visibility="{Binding AnnotateConstellationBoundaries, Converter={StaticResource BooleanToVisibilityCollapsedConverter}, FallbackValue=Visible}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Canvas>
                        <Polygon
                            Points="{Binding Collection}"
                            StrokeThickness="{Binding StrokeThickness}">
                            <Polygon.Stroke>
                                <SolidColorBrush>
                                    <SolidColorBrush.Color>
                                        <Color
                                            A="128"
                                            B="153"
                                            G="255"
                                            R="255" />
                                    </SolidColorBrush.Color>
                                </SolidColorBrush>
                            </Polygon.Stroke>
                        </Polygon>
                    </Canvas>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <ItemsControl ItemsSource="{Binding SkyMapAnnotator.FrameLineMatrix.RAPoints}" Visibility="{Binding AnnotateGrid, Converter={StaticResource BooleanToVisibilityCollapsedConverter}, FallbackValue=Visible}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Canvas>
                        <ninaCustomControlLibrary:CardinalSplineShape
                                                Closed="{Binding Closed}"
                                                Points="{Binding Collection}"
                                                StrokeThickness="{Binding StrokeThickness}">
                            <ninaCustomControlLibrary:CardinalSplineShape.Stroke>
                                <SolidColorBrush>
                                    <SolidColorBrush.Color>
                                        <Color
                                            A="128"
                                            B="255"
                                            G="128"
                                            R="128" />
                                    </SolidColorBrush.Color>
                                </SolidColorBrush>
                            </ninaCustomControlLibrary:CardinalSplineShape.Stroke>
                        </ninaCustomControlLibrary:CardinalSplineShape>
                    </Canvas>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
