<UserControl x:Class="NINA.View.EquipmentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NINA.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <TabControl>
        <TabItem>
            <TabItem.Header>Camera</TabItem.Header>
            <local:CameraView DataContext="{Binding CameraVM}" />
        </TabItem>
        <TabItem>
            <TabItem.Header>Filter Wheel &amp; Focuser</TabItem.Header>
            <UniformGrid Columns="2">
                <local:FilterWheelView DataContext="{Binding FilterWheelVM}" />
                <local:FocuserView DataContext="{Binding FocuserVM}" />
            </UniformGrid>
            
        </TabItem>
        <TabItem>
            <TabItem.Header>Telescope</TabItem.Header>
            <local:TelescopeView DataContext="{Binding TelescopeVM}" />
        </TabItem>        
    </TabControl>
</UserControl>
