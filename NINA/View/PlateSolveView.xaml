<UserControl
    x:Class="NINA.View.PlateSolveView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NINA.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ninactrl="clr-namespace:NINACustomControlLibrary;assembly=NINACustomControlLibrary"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid IsEnabled="{Binding Cam, Converter={StaticResource InverseNullToBooleanConverter}}">

        <Grid IsEnabled="{Binding Cam.Connected}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>

            <Grid Grid.Column="1">
                <local:ImageControlView DataContext="{Binding Source={StaticResource AppVM}, Path=ImagingVM.ImageControl}" />
            </Grid>

            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1,1,0,1">
                <UniformGrid Columns="1">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>Center RA:</TextBlock>
                        <TextBlock Margin="5,0,0,0" Text="{Binding PlateSolveResult.Coordinates.RA, StringFormat=\{0:#.000\}}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>Center RA hms:</TextBlock>
                        <TextBlock Margin="5,0,0,0" Text="{Binding PlateSolveResult.Coordinates.RAString}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock>Center Dec:</TextBlock>
                        <TextBlock Margin="5,0,0,0" Text="{Binding PlateSolveResult.Coordinates.Dec, StringFormat=\{0:#.000\}}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>Center Dec dms:</TextBlock>
                        <TextBlock Margin="5,0,0,0" Text="{Binding PlateSolveResult.Coordinates.DecString}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock>Radius:</TextBlock>
                        <TextBlock Margin="5,0,0,0" Text="{Binding PlateSolveResult.Radius, StringFormat=\{0:#.000 deg\}}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>Pixel scale:</TextBlock>
                        <TextBlock Margin="5,0,0,0" Text="{Binding PlateSolveResult.Pixscale, StringFormat=\{0:#.00 arcsec/pixel\}}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>Orientation:</TextBlock>
                        <TextBlock Margin="5,0,0,0" Text="{Binding PlateSolveResult.Orientation, StringFormat=\{0:#.00\}}" />
                    </StackPanel>
                </UniformGrid>
            </Border>

            <StackPanel
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Right"
                Orientation="Horizontal">

                <local:CameraControlView
                    MyBinningModes="{Binding Source={StaticResource AppVM}, Path=CameraVM.Cam.BinningModes, Mode=TwoWay}"
                    MyExposureDuration="{Binding SnapExposureDuration, Mode=TwoWay}"
                    MyFilters="{Binding Source={StaticResource AppVM}, Path=OptionsVM.FilterWheelFilters}"
                    MySelectedBinningMode="{Binding SnapBin, Mode=TwoWay}"
                    MySelectedFilter="{Binding SnapFilter, Mode=TwoWay}" />

                <ninactrl:CancellableButton
                    Width="50"
                    Height="50"
                    Margin="5,0,5,0"
                    ButtonImage="{StaticResource PlatesolveSVG}"
                    CancelButtonImage="{StaticResource CancelSVG}"
                    CancelCommand="{Binding CancelSolveCommand}"
                    Command="{Binding SolveCommand}"
                    ToolTip="Capture image and platesolve" />

                <Button
                    Width="50"
                    Height="50"
                    Margin="5,0,5,0"
                    Command="{Binding SyncCommand}">
                    <Button.ToolTip>
                        <ToolTip ToolTipService.ShowOnDisabled="True">
                            Sync scope to coordinates
                        </ToolTip>
                    </Button.ToolTip>
                    <Grid>
                        <Path
                            Margin="25,25,5,5"
                            Data="{StaticResource LoopSVG}"
                            Fill="{StaticResource ButtonForegroundBrush}"
                            Stretch="Uniform" />
                        <Path
                            Margin="5"
                            Data="{StaticResource TelescopeSVG}"
                            Fill="{StaticResource ButtonForegroundBrush}"
                            Stretch="Uniform" />
                    </Grid>
                </Button>

                <Button
                    Width="50"
                    Height="50"
                    Margin="5,0,5,0"
                    Command="{Binding SyncAndReslewCommand}">
                    <Button.ToolTip>
                        <ToolTip ToolTipService.ShowOnDisabled="True">
                            Sync scope to coordinates and reslew to initial target
                        </ToolTip>
                    </Button.ToolTip>
                    <Grid>
                        <Path
                            Margin="5,30,30,5"
                            Data="{StaticResource LoopSVG}"
                            Fill="{StaticResource ButtonForegroundBrush}"
                            Stretch="Uniform" />
                        <Path
                            Margin="15,30,15,5"
                            Data="{StaticResource NextSVG}"
                            Fill="{StaticResource ButtonForegroundBrush}"
                            Stretch="Uniform" />
                        <Path
                            Margin="30,30,5,5"
                            Data="{StaticResource SettingsSVG}"
                            Fill="{StaticResource ButtonForegroundBrush}"
                            Stretch="Uniform" />
                        <Path
                            Margin="5"
                            Data="{StaticResource TelescopeSVG}"
                            Fill="{StaticResource ButtonForegroundBrush}"
                            Stretch="Uniform" />
                    </Grid>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>