<UserControl x:Class="NINA.View.SequenceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ns="clr-namespace:NINA.Locale"
             xmlns:local="clr-namespace:NINA.View"
             xmlns:model="clr-namespace:NINA.Model"
             xmlns:rules="clr-namespace:NINA.Utility.ValidationRules"
             xmlns:util="clr-namespace:NINA.Utility"
             xmlns:ninactrl="clr-namespace:NINACustomControlLibrary;assembly=NINACustomControlLibrary"
             mc:Ignorable="d" xmlns:s="clr-namespace:System;assembly=mscorlib"
             d:DesignHeight="300" d:DesignWidth="300">
    
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition />
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
        <UniformGrid Columns="2">
            <GroupBox>
                <GroupBox.Header>
                    <UniformGrid Columns="2" >
                        <Grid Margin="5" Height="40">
                            <TextBlock Text="{ns:Loc LblSequence}" VerticalAlignment="Center" FontSize="20" ></TextBlock>
                        </Grid>
                    </UniformGrid>
                </GroupBox.Header>

                
                <StackPanel DataContext="{Binding Sequence}" >
                    <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                        <UniformGrid Columns="2">
                            <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                <TextBlock VerticalAlignment="Center" Text="{ns:Loc LblTargetName}"></TextBlock>
                                <TextBox Text="{Binding TargetName}" Margin="5,0,0,0" />
                            </UniformGrid>
                        </UniformGrid>
                    </Border>
                    <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                        <UniformGrid Columns="2">
                            <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                <TextBlock VerticalAlignment="Center" Text="{ns:Loc LblSequenceDelay}"></TextBlock>
                                <TextBox Margin="5,0,0,0">
                                    <TextBox.Text>
                                        <Binding Path="Delay" UpdateSourceTrigger="LostFocus" >
                                            <Binding.ValidationRules>
                                                <rules:GreaterZeroRule />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                            </UniformGrid>
                        </UniformGrid>
                    </Border>
                    <StackPanel Visibility="{Binding Coordinates, Converter={StaticResource NullToVisibilityCollapsedConverter}}">
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                            <UniformGrid Columns="2">
                                <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                    <TextBlock VerticalAlignment="Center" Text="{ns:Loc LblRA}"></TextBlock>
                                    <TextBlock Text="{Binding Coordinates.RAString}" Margin="5,0,0,0" />
                                </UniformGrid>
                            </UniformGrid>
                        </Border>
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                            <UniformGrid Columns="2">
                                <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                    <TextBlock VerticalAlignment="Center" Text="{ns:Loc LblDec}"></TextBlock>
                                    <TextBlock Text="{Binding Coordinates.DecString}" Margin="5,0,0,0" />
                                </UniformGrid>
                            </UniformGrid>
                        </Border>
                    </StackPanel>
                </StackPanel>                    
                
               
            </GroupBox>
            <Grid Margin="0 10 0 0" Visibility="{Binding Sequence.DSO, Converter={StaticResource NullToVisibilityCollapsedConverter}}">
                <local:AltitudeChart DataContext="{Binding Sequence.DSO}" />
            </Grid>
        </UniformGrid>
        
        <DataGrid Grid.Row="1" ItemsSource="{Binding Sequence}" AutoGenerateColumns="False"  CanUserAddRows="False" SelectedIndex="{Binding SelectedSequenceIdx}">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="*" Header="{ns:Loc LblRemainingNo}" CanUserSort="False">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ExposureCount}" TextAlignment="Center" VerticalAlignment="Center" Margin="5 0 5 0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="*" Header="{ns:Loc LblTotalNo}" CanUserSort="False">
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ninactrl:IntStepperControl 
                                    Margin="5 0 5 0"
                                    MinValue="0" 
                                    StepSize="1" 
                                    AddSVG="{StaticResource AddSVG}"
                                    SubstractSVG="{StaticResource SubstractSVG}"
                                    Value="{Binding TotalExposureCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                    HorizontalAlignment="Stretch" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding TotalExposureCount}" TextAlignment="Center" VerticalAlignment="Center" Margin="5 0 5 0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="*" Header="{ns:Loc LblTime}" CanUserSort="False">
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ninactrl:StepperControl 
                                    Margin="5 0 5 0"
                                    MinValue="0" 
                                    StepSize="1" 
                                    AddSVG="{StaticResource AddSVG}"
                                    SubstractSVG="{StaticResource SubstractSVG}"
                                    Value="{Binding ExposureTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                    HorizontalAlignment="Stretch" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ExposureTime}" TextAlignment="Center" VerticalAlignment="Center" Margin="5 0 5 0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="*" Header="{ns:Loc LblType}" CanUserSort="False">
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ComboBox
                                    ItemsSource="{Binding Source={StaticResource AppVM}, Path=SeqVM.ImageTypes}" 
                                    SelectedItem="{Binding ImageType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ImageType}" TextAlignment="Center" VerticalAlignment="Center" Margin="5 0 5 0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="*" Header="{ns:Loc LblFilter}" CanUserSort="False">
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ComboBox
                                    ItemsSource="{Binding Source={StaticResource AppVM}, Path=FilterWheelVM.FW.Filters}" 
                                    SelectedItem="{Binding FilterType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                    DisplayMemberPath="Name" SelectedValuePath="Name" 
                                    />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding FilterType}" TextAlignment="Center" VerticalAlignment="Center" Margin="5 0 5 0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="*" Header="{ns:Loc LblBinning}" CanUserSort="False">
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ComboBox 
                                    ItemsSource="{Binding Source={StaticResource AppVM}, Path=CameraVM.Cam.BinningModes}" 
                                    SelectedItem="{Binding Binning, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    DisplayMemberPath="Name" SelectedValuePath="Name"
                                    />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Binning}" TextAlignment="Center" VerticalAlignment="Center" Margin="5 0 5 0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="*" Header="{ns:Loc LblDither}" CanUserSort="False">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding Dither, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="*" Header="{ns:Loc LblDitherEveryNoFrame}" CanUserSort="False">
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ninactrl:IntStepperControl 
                                    Margin="5 0 5 0"
                                    MinValue="0" 
                                    StepSize="1" 
                                    AddSVG="{StaticResource AddSVG}"
                                    SubstractSVG="{StaticResource SubstractSVG}"
                                    Value="{Binding DitherAmount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                    HorizontalAlignment="Stretch" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DitherAmount}" TextAlignment="Center" VerticalAlignment="Center" Margin="5 0 5 0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- List of ISOs -->
                    <DataGridTemplateColumn Width="*" Header="{ns:Loc LblGain}" CanUserSort="False">
                        <DataGridTemplateColumn.Visibility>
                            <PriorityBinding>
                                <Binding Source="{StaticResource AppVM}" Path="CameraVM.Cam.Gains" Converter="{StaticResource CollectionContainsItemsToVisibilityConverter}" />
                                <Binding Source="{StaticResource AppVM}" Path="CameraVM.Cam" Converter="{StaticResource NullToVisibilityConverter}" />                                
                            </PriorityBinding>
                        </DataGridTemplateColumn.Visibility>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ComboBox SelectedItem="{Binding Gain, Mode=TwoWay, Converter={StaticResource MinusOneToEmptyStringConverter}}">
                                    <ComboBox.ItemsSource>
                                        <CompositeCollection>
                                            <s:Int16>-1</s:Int16>
                                            <CollectionContainer Collection="{Binding Source={StaticResource AppVM}, Path=CameraVM.Cam.Gains}" />
                                        </CompositeCollection>
                                    </ComboBox.ItemsSource>
                                </ComboBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Gain, Converter={StaticResource MinusOneToEmptyStringConverter}}" TextAlignment="Center" VerticalAlignment="Center" Margin="5 0 5 0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Free Gain Setting -->
                    <DataGridTemplateColumn Width="*" Header="{ns:Loc LblGain}" CanUserSort="False">
                        <DataGridTemplateColumn.Visibility>
                            <PriorityBinding>
                                <Binding Source="{StaticResource AppVM}" Path="CameraVM.Cam.Gains" Converter="{StaticResource InverseCollectionContainsItemsToVisibilityConverter}" />
                                <Binding Source="{StaticResource AppVM}" Path="CameraVM.Cam" Converter="{StaticResource NullToVisibilityConverter}" />                                
                            </PriorityBinding>
                        </DataGridTemplateColumn.Visibility>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate >
                                <TextBox>
                                    <TextBox.Text>
                                        <Binding Path="Gain" Converter="{StaticResource MinusOneToEmptyStringConverter}" 
                                                 UpdateSourceTrigger="LostFocus">
                                            <Binding.ValidationRules>
                                                <util:ShortRangeRule >
                                                    <util:ShortRangeRule.ValidRange>
                                                        <util:ShortRangeChecker
                                                            Minimum="{Binding Source={StaticResource AppVM}, Path=CameraVM.Cam.GainMin}" 
                                                            Maximum="{Binding Source={StaticResource AppVM}, Path=CameraVM.Cam.GainMax}" />
                                                    </util:ShortRangeRule.ValidRange>
                                                </util:ShortRangeRule>
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Gain, Converter={StaticResource MinusOneToEmptyStringConverter}}" TextAlignment="Center" VerticalAlignment="Center" Margin="5 0 5 0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>


                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0 5 0 5">
                <Button Width="40"    Command="{Binding AddSequenceCommand}"  >
                    <Button.ToolTip>
                        <ToolTip ToolTipService.ShowOnDisabled="True">
                            <TextBlock Text="{ns:Loc LblTooltipAddSequence}" />
                        </ToolTip>
                    </Button.ToolTip>
                    <Path Fill="{StaticResource ButtonForegroundBrush}" Data="{StaticResource AddSVG}" Stretch="Uniform" Margin="5">
                    </Path>
                </Button>
                <Button Width="40"   Command="{Binding RemoveSequenceCommand}"  >
                    <Button.ToolTip>
                        <ToolTip ToolTipService.ShowOnDisabled="True">
                            <TextBlock Text="{ns:Loc LblTooltipRemoveSequence}" />
                        </ToolTip>
                    </Button.ToolTip>
                    <Path Fill="{StaticResource ButtonForegroundBrush}" Data="{StaticResource SubstractSVG}" Stretch="Uniform" Margin="5">
                    </Path>
                </Button>
                <ninactrl:CancellableButton 
                    Command="{Binding StartSequenceCommand}" 
                    CancelCommand="{Binding CancelSequenceCommand}" 
                    ButtonImage="{StaticResource PlaySVG}" 
                    CancelButtonImage="{StaticResource CancelSVG}" 
                    ToolTip="{ns:Loc LblTooltipStartSequence}"
                    />
            </StackPanel>
        </Grid>
</UserControl>
