            </GroupBox>
            <GroupBox DataContext="{Binding Sequence}" Visibility="{Binding DSO, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NullToVisibilityCollapsedConverter}}">
                <GroupBox.Header>
                    <UniformGrid Columns="2">
                        <Grid Height="40" Margin="5">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="20"
                                Text="{ns:Loc LblTarget}" />
                        </Grid>
                        <UniformGrid Columns="2" HorizontalAlignment="Right">
                            <Button
                                Width="25"
                                Height="25"
                                Margin="5,0,5,0"
                                VerticalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                IsEnabled="{Binding Coordinates, Converter={StaticResource InverseNullToBooleanConverter}}"
                                Command="{Binding DataContext.CoordsToFramingCommand, RelativeSource={RelativeSource AncestorType=local:SequenceView}}">
                                <Button.ToolTip>
                                    <ToolTip ToolTipService.ShowOnDisabled="False">
                                        <TextBlock Text="{ns:Loc LblCoordinatesToFramingTooltip}" />
                                    </ToolTip>
                                </Button.ToolTip>
                                <Path
                                    Margin="5"
                                    Data="{StaticResource FocusAssistantSVG}"
                                    Fill="{StaticResource ButtonForegroundBrush}"
                                    Stretch="Uniform" />
                            </Button>
                            <Button
                                Width="25"
                                Height="25"
                                Margin="5,0,5,0"
                                VerticalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                Command="{Binding DataContext.CoordsFromPlanetariumCommand, RelativeSource={RelativeSource AncestorType=local:SequenceView}}">
                                <Button.ToolTip>
                                    <ToolTip ToolTipService.ShowOnDisabled="False">
                                        <TextBlock Text="{ns:Loc LblPlanetariumTooltip}" />
                                    </ToolTip>
                                </Button.ToolTip>
                                <Path
                                    Margin="5"
                                    Data="{StaticResource GetCoordsSVG}"
                                    Fill="{StaticResource ButtonForegroundBrush}"
                                    Stretch="Uniform" />
                            </Button>
                        </UniformGrid>
                    </UniformGrid>
                </GroupBox.Header>

                <Grid Visibility="{Binding Coordinates, Converter={StaticResource NullToVisibilityCollapsedConverter}}">
