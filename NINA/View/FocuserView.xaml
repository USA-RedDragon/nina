<UserControl x:Class="NINA.View.FocuserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ns="clr-namespace:NINA.Locale"
             xmlns:ninactrl="clr-namespace:NINACustomControlLibrary;assembly=NINACustomControlLibrary"
             xmlns:local="clr-namespace:NINA.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <GroupBox>
        <GroupBox.Header>
            <UniformGrid Columns="2" >
                <TextBlock Text="{ns:Loc LblFocuser}" VerticalAlignment="Center" FontSize="20"></TextBlock>
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="40" />
                    </Grid.ColumnDefinitions>
                    <ComboBox MinHeight="40" 
                                          IsEnabled="{Binding Focuser.Connected, Converter={StaticResource InverseBooleanConverter}}"
                                          ItemsSource="{Binding FocuserChooserVM.Devices}" 
                                          SelectedItem="{Binding FocuserChooserVM.SelectedDevice}" 
                                          SelectedValuePath="Name" 
                                          DisplayMemberPath="Name"  ></ComboBox>
                    <Button Grid.Column="1" Width="40" Height="40"  Command="{Binding FocuserChooserVM.SetupDialogCommand}"  IsEnabled="{Binding FocuserChooserVM.SelectedDevice.HasSetupDialog}">
                        <Button.ToolTip>
                            <ToolTip ToolTipService.ShowOnDisabled="False">
                                <TextBlock Text="{ns:Loc LblSettings}" />
                            </ToolTip>
                        </Button.ToolTip>
                        <Grid>
                            <Path Fill="{StaticResource ButtonForegroundBrush}" Data="{StaticResource SettingsSVG}" Stretch="Uniform" Margin="5">
                            </Path>
                        </Grid>
                    </Button>
                    <Button Grid.Column="2" Height="40" Width="40" Command="{Binding RefreshFocuserListCommand}">
                        <Button.ToolTip>
                            <ToolTip ToolTipService.ShowOnDisabled="False">
                                <TextBlock Text="{ns:Loc LblRescanDevices}" />
                            </ToolTip>
                        </Button.ToolTip>
                        <Grid>
                            <Path Fill="{StaticResource ButtonForegroundBrush}" Data="{StaticResource LoopSVG}" Stretch="Uniform" Margin="5">
                            </Path>
                        </Grid>
                    </Button>
                    <Grid Height="40" Width="40" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button Command="{Binding ChooseFocuserCommand}"  
                                        IsEnabled="{Binding Focuser.Connected, Converter={StaticResource InverseBooleanConverter}}"
                                        Visibility="{Binding Focuser.Connected, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                            <Button.ToolTip>
                                <ToolTip ToolTipService.ShowOnDisabled="False">
                                    <TextBlock Text="{ns:Loc LblConnect}" />
                                </ToolTip>
                            </Button.ToolTip>
                            <Grid>
                                <Path Fill="{StaticResource ButtonForegroundDisabledBrush}" Data="{StaticResource PowerSVG}" Stretch="Uniform" Margin="5">
                                </Path>
                            </Grid>
                        </Button>
                        <Grid Visibility="{Binding Focuser, Converter={StaticResource NullToVisibilityConverter}}">
                            <Button  Command="{Binding DisconnectCommand}" 
                                             IsEnabled="{Binding Focuser.Connected}" 
                                             Visibility="{Binding Focuser.Connected, Converter={StaticResource VisibilityConverter}}">
                                <Button.ToolTip>
                                    <ToolTip ToolTipService.ShowOnDisabled="False">
                                        <TextBlock Text="{ns:Loc LblDisconnect}" />
                                    </ToolTip>
                                </Button.ToolTip>
                                <Grid>
                                    <Path Fill="{StaticResource ButtonForegroundBrush}" Data="{StaticResource PowerSVG}" Stretch="Uniform" Margin="5">
                                    </Path>
                                </Grid>
                            </Button>
                        </Grid>
                    </Grid>
                </Grid>
            </UniformGrid>
        </GroupBox.Header>

        <Grid>
            <StackPanel>
                <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                    <UniformGrid Columns="2" >
                        <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                            <TextBlock Text="{ns:Loc LblName}"></TextBlock>
                            <TextBlock Text="{Binding Focuser.Name}" Margin="5,0,0,0" TextWrapping="WrapWithOverflow"/>
                        </UniformGrid>
                    </UniformGrid>
                </Border>
                <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                    <UniformGrid Columns="2" >
                        <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                            <TextBlock Text="{ns:Loc LblDescription}"></TextBlock>
                            <TextBlock Text="{Binding Focuser.Description}" Margin="5,0,0,0" TextWrapping="WrapWithOverflow"/>
                        </UniformGrid>
                    </UniformGrid>
                </Border>
                <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                    <UniformGrid Columns="2" >
                        <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                            <TextBlock Text="{ns:Loc LblDriverInfo}"></TextBlock>
                            <TextBlock Text="{Binding Focuser.DriverInfo}" Margin="5,0,0,0" TextWrapping="WrapWithOverflow" />
                        </UniformGrid>
                        <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                            <TextBlock Text="{ns:Loc LblDriverVersion}"></TextBlock>
                            <TextBlock Text="{Binding Focuser.DriverVersion}" Margin="5,0,0,0" />
                        </UniformGrid>
                    </UniformGrid>
                </Border>
                <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                    <UniformGrid Columns="2" >
                        <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                            <TextBlock Text="{ns:Loc LblIsMoving}"></TextBlock>
                            <TextBlock Text="{Binding IsMoving}" Margin="5,0,0,0" TextWrapping="WrapWithOverflow"/>
                        </UniformGrid>
                    </UniformGrid>
                </Border>
                <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                    <UniformGrid Columns="2" >
                        <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                            <TextBlock Text="{ns:Loc LblMaxIncrement}"></TextBlock>
                            <TextBlock Text="{Binding Focuser.MaxIncrement}" Margin="5,0,0,0" TextWrapping="WrapWithOverflow"/>
                        </UniformGrid>
                    </UniformGrid>
                </Border>
                <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                    <UniformGrid Columns="2" >
                        <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                            <TextBlock Text="{ns:Loc LblMaxStep}"></TextBlock>
                            <TextBlock Text="{Binding Focuser.MaxStep}" Margin="5,0,0,0" TextWrapping="WrapWithOverflow"/>
                        </UniformGrid>
                    </UniformGrid>
                </Border>
                <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                    <UniformGrid Columns="2" >
                        <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                            <TextBlock Text="{ns:Loc LblPosition}"></TextBlock>
                            <TextBlock Text="{Binding Position}" Margin="5,0,0,0" TextWrapping="WrapWithOverflow"/>
                        </UniformGrid>
                    </UniformGrid>
                </Border>
                <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1" IsEnabled="{Binding Focuser.TempCompAvailable}">
                    <UniformGrid Columns="2" >
                        <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                            <TextBlock Text="{ns:Loc LblTemperatureCompensation}" VerticalAlignment="Center"></TextBlock>
                            <CheckBox IsChecked="{Binding TempComp}" Width="75" Height="25" HorizontalAlignment="Left"  Margin="5,0,0,0"/>
                        </UniformGrid>
                    </UniformGrid>
                </Border>
                <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                    <UniformGrid Columns="2" >
                        <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                            <TextBlock Text="{ns:Loc LblTemperature}"></TextBlock>
                            <TextBlock Text="{Binding Temperature, StringFormat=\{0:#.00\} }" Margin="5,0,0,0" TextWrapping="WrapWithOverflow"/>
                        </UniformGrid>
                    </UniformGrid>
                </Border>

                <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                    <UniformGrid Columns="2" >
                        <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                            <TextBlock Text="{ns:Loc LblTargetPosition}" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBox Height="25" MinWidth="90" Text="{Binding TargetPosition}" Margin="5 0 0 0" />
                                <Grid IsEnabled="{Binding Focuser, Converter={StaticResource InverseNullToBooleanConverter}}">
                                    <ninactrl:CancellableButton
                                        Width="50" Height="25" 
                                        Command="{Binding MoveFocuserCommand}" 
                                        CancelCommand="{Binding HaltFocuserCommand}" 
                                        ButtonText="{ns:Loc LblMove}" 
                                        CancelButtonImage="{StaticResource CancelSVG}"  
                                        ToolTip=""
                                        Margin="5" HorizontalAlignment="Left"
                                        />
                                </Grid>
                            </StackPanel>
                        </UniformGrid>
                    </UniformGrid>
                </Border>
            </StackPanel>
        </Grid>
    </GroupBox>
</UserControl>
