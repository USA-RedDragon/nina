                    <ContentPresenter Content="{Binding ImageAreaContent, ElementName=PART_ImageView}" />

                    <Grid.LayoutTransform>
                        <ScaleTransform x:Name="scaleTransform" />
                    </Grid.LayoutTransform>
                </Grid>

            </Grid>-->
        </ScrollViewer>
    </Grid>
</UserControl>
