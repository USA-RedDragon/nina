<UserControl
    x:Class="NINA.View.DSLRSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enum="clr-namespace:NINA.Utility.Enum"
    xmlns:local="clr-namespace:NINA.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ns="clr-namespace:NINA.Locale"
    xmlns:util="clr-namespace:NINA.Utility"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{StaticResource BackgroundBrush}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
            <TextBlock
                Width="140"
                VerticalAlignment="Center"
                Text="{ns:Loc LblFileSaveMode}" />
            <ComboBox
                Margin="10,0,0,0"
                ItemsSource="{Binding Source={util:EnumBindingSource {x:Type enum:DSLRFileSaveMode}}}"
                SelectedItem="{Binding DSLRFileSaveMode}" />
        </StackPanel>
        <Button
            Grid.Row="1"
            Margin="5"
            util:ButtonHelper.DialogResult="True"
            Content="{ns:Loc LblOK}" />
    </Grid>
</UserControl>