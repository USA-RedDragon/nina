<UserControl x:Class="NINA.View.LoadingAnimation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NINA.View"
             xmlns:util="clr-namespace:NINA.Utility"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             RenderTransformOrigin="0.5,0.5">
    
    <UserControl.Resources>
        <Storyboard x:Key="Storyboard">
            <DoubleAnimation  Timeline.DesiredFrameRate="20"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)" 
                             From="0" To="360" Duration="00:00:5.000" RepeatBehavior="Forever"/>
        </Storyboard>       
    </UserControl.Resources>
    
    <UserControl.Style>
        <Style TargetType="{x:Type UserControl}">
            <Style.Triggers>
                <Trigger Property="IsVisible" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard x:Name="ProgressAnimation_BeginStoryboard" Storyboard="{StaticResource Storyboard}"/>
                    </Trigger.EnterActions>                    
                </Trigger>
                <Trigger Property="IsVisible" Value="False">
                    <Trigger.EnterActions>
                        <RemoveStoryboard BeginStoryboardName="ProgressAnimation_BeginStoryboard"/>
                    </Trigger.EnterActions>                    
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Style>
    <UserControl.RenderTransform>
        <RotateTransform Angle="0" />
    </UserControl.RenderTransform>

    <Path Fill="{StaticResource ButtonForegroundBrush}" Data="{StaticResource LoadingSpinnerSVG}" Stretch="Uniform" Margin="5" />

</UserControl>
