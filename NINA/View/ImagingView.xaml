<UserControl x:Class="NINA.View.ImagingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NINA.View"
             xmlns:view="clr-namespace:NINA.View"
             xmlns:util="clr-namespace:NINA.Utility"
              
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />            
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid IsEnabled="{Binding IsExposing, Converter={StaticResource InverseBooleanConverter}}" >
                <view:SequenceView DataContext="{Binding SeqVM}" />
            </Grid>
            <!--<Expander Grid.Row="1" IsExpanded="True" Header="Histogram">
                <local:HistogramView DataContext="{Binding SourceArray}" />
                
            </Expander>-->
            
        </Grid>
        
        <StackPanel Grid.Row="1"  Orientation="Horizontal">
            <Button Width="50" Height="50" Command="{Binding SeqVM.AddSequenceCommand}"  Margin="5,0,5,0">
                <Path Fill="{StaticResource ButtonForegroundBrush}" Data="{StaticResource AddSVG}" Stretch="Uniform" Margin="5">
                </Path>
            </Button>

            <local:CancellableButtonView MyCommand="{Binding StartSequenceCommand}" MyCancelCommand="{Binding CancelSequenceCommand}" MyButtonImage="{StaticResource PlaySVG}" MyCancelButtonImage="{StaticResource CancelSVG}" />

        </StackPanel>
        

        <!--<Image Grid.Column="1" Source="{Binding SnapCommand.Execution.Result}" 
               Visibility="{Binding SnapCommand.Execution.IsSuccessfullyCompleted, Converter={StaticResource VisibilityConverter}}">-->
        <Border Grid.Column="1"  BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
            <Grid>
                <Path Fill="{StaticResource ButtonForegroundDisabledBrush}" Opacity="0.2" Data="{StaticResource PictureSVG}" Stretch="Uniform" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Height="100" Width="100">
                </Path>
                <Image Source="{Binding Image}" />
                <Border HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="150" Background="{StaticResource BorderBrush}" Visibility="{Binding IsExposing, Converter={StaticResource VisibilityConverter}}">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource ButtonForegroundBrush}" Text="{Binding ExpStatus}"></TextBlock>
                </Border>                
            </Grid>
        </Border>

        <Grid Grid.Column="1" Grid.Row="1" IsEnabled="{Binding Cam, Converter={StaticResource InverseNullToBooleanConverter}}">
            <local:CameraControlView  IsEnabled="{Binding Cam.Connected}"
                    MyAutoStretch="{Binding AutoStretch, Mode=TwoWay}"
                    MyLoop="{Binding Loop, Mode=TwoWay}"
                    MyCommand="{Binding SnapCommand}" 
                    MyCancelCommand="{Binding CancelSnapCommand}" 
                    MyButtonImage="{StaticResource PictureSVG}" 
                    MyCancelButtonImage="{StaticResource CancelSVG}"
                    MyBinningModes="{Binding Source={StaticResource AppVM}, Path=CameraVM.Cam.BinningModes, Mode=TwoWay}"
                    MyFilters="{Binding Source={StaticResource AppVM}, Path=CameraVM.FilterWheelVM.FW.Filters, Mode=TwoWay}"
                    MySelectedBinningMode="{Binding SnapBin, Mode=TwoWay}"
                    MySelectedFilter="{Binding SnapFilter, Mode=TwoWay}"
                    MyExposureDuration="{Binding SnapExposureDuration, Mode=TwoWay}" />
        </Grid>
    </Grid>
</UserControl>
