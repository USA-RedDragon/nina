<UserControl x:Class="NINA.View.TelescopeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NINA.View"
             xmlns:util="clr-namespace:NINA.Utility"
             xmlns:ns="clr-namespace:NINA.Locale"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.ColumnSpan="1">

            <GroupBox>
                <GroupBox.Header>
                    <UniformGrid Columns="2" >
                        <TextBlock Text="Telescope" VerticalAlignment="Center" FontSize="20"></TextBlock>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition Width="40" />
                            </Grid.ColumnDefinitions>
                            <ComboBox MinHeight="40" 
                                      IsEnabled="{Binding Telescope.Connected, Converter={StaticResource InverseBooleanConverter}}" 
                                      ItemsSource="{Binding TelescopeChooserVM.Devices}" 
                                      SelectedItem="{Binding TelescopeChooserVM.SelectedDevice}" 
                                      SelectedValuePath="Name" 
                                      DisplayMemberPath="Name"  ></ComboBox>
                            <Button Grid.Column="1" Width="40" Height="40"  Command="{Binding TelescopeChooserVM.SetupDialogCommand}"  IsEnabled="{Binding TelescopeChooserVM.SelectedDevice.HasSetupDialog}">
                                <Button.ToolTip>
                                    <ToolTip ToolTipService.ShowOnDisabled="False">
                                        <TextBlock Text="{ns:Loc LblSettings}" />
                                    </ToolTip>
                                </Button.ToolTip>
                                <Grid>
                                    <Path Fill="{StaticResource ButtonForegroundBrush}" Data="{StaticResource SettingsSVG}" Stretch="Uniform" Margin="5">
                                    </Path>
                                </Grid>
                            </Button>
                            <Button Grid.Column="2" Height="40" Width="40" Command="{Binding RefreshTelescopeListCommand}">
                                <Button.ToolTip>
                                    <ToolTip ToolTipService.ShowOnDisabled="False">
                                        <TextBlock Text="Rescan devices" />
                                    </ToolTip>
                                </Button.ToolTip>
                                <Grid>
                                    <Path Fill="{StaticResource ButtonForegroundBrush}" Data="{StaticResource LoopSVG}" Stretch="Uniform" Margin="5">
                                    </Path>
                                </Grid>
                            </Button>
                            <Grid Height="40" Width="40" Grid.Column="3">
                                <Button Command="{Binding ChooseTelescopeCommand}"  
                                        IsEnabled="{Binding Telescope.Connected, Converter={StaticResource InverseBooleanConverter}}" 
                                        Visibility="{Binding Telescope.Connected, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                    <Button.ToolTip>
                                        <ToolTip ToolTipService.ShowOnDisabled="False">
                                            <TextBlock Text="Connect" />
                                        </ToolTip>
                                    </Button.ToolTip>
                                    <Grid>
                                        <Path Fill="{StaticResource ButtonForegroundDisabledBrush}" Data="{StaticResource PowerSVG}" Stretch="Uniform" Margin="5">

                                        </Path>
                                    </Grid>
                                </Button>
                                <Grid Visibility="{Binding Telescope, Converter={StaticResource NullToVisibilityConverter}}">
                                    <Button  Command="{Binding DisconnectCommand}" 
                                             IsEnabled="{Binding Telescope.Connected}"
                                             Visibility="{Binding Telescope.Connected, Converter={StaticResource VisibilityConverter}}">
                                        <Button.ToolTip>
                                            <ToolTip ToolTipService.ShowOnDisabled="False">
                                                <TextBlock Text="Disconnect" />
                                            </ToolTip>
                                        </Button.ToolTip>
                                        <Grid>
                                            <Path Fill="{StaticResource ButtonForegroundBrush}" Data="{StaticResource PowerSVG}" Stretch="Uniform" Margin="5">
                                            </Path>
                                        </Grid>
                                    </Button>
                                </Grid>
                            </Grid>
                        </Grid>
                    </UniformGrid>
                </GroupBox.Header>
                <Grid>
                    <StackPanel>
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                            <UniformGrid Columns="2" >
                                <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                    <TextBlock><Run Text="Name:"/></TextBlock>
                                    <TextBlock Text="{Binding Telescope.Name}" Margin="5,0,0,0" TextWrapping="WrapWithOverflow"/>
                                </UniformGrid>
                            </UniformGrid>
                        </Border>
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                            <UniformGrid Columns="2" >
                                <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                    <TextBlock><Run Text="Description:"/></TextBlock>
                                    <TextBlock Text="{Binding Telescope.Description}" Margin="5,0,0,0" TextWrapping="WrapWithOverflow"/>
                                </UniformGrid>
                            </UniformGrid>
                        </Border>
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                            <UniformGrid Columns="2" >
                                <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                    <TextBlock><Run Text="Driver Info:"/></TextBlock>
                                    <TextBlock Text="{Binding Telescope.DriverInfo}" Margin="5,0,0,0" TextWrapping="WrapWithOverflow" />
                                </UniformGrid>
                                <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                    <TextBlock><Run Text="Driver Version:"/></TextBlock>
                                    <TextBlock Text="{Binding Telescope.DriverVersion}" Margin="5,0,0,0" />
                                </UniformGrid>
                            </UniformGrid>
                        </Border>
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                            <UniformGrid Columns="2" >
                                <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                    <TextBlock>Site Latitude</TextBlock>
                                    <TextBlock Text="{Binding Telescope.SiteLatitude}" Margin="5,0,0,0" />
                                </UniformGrid>
                                <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                    <TextBlock>Site Longitude</TextBlock>
                                    <TextBlock Text="{Binding Telescope.SiteLongitude}" Margin="5,0,0,0" />
                                </UniformGrid>

                            </UniformGrid>
                        </Border>
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                            <UniformGrid Columns="2" >
                                <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                    <TextBlock>Site Elevation</TextBlock>
                                    <TextBlock Text="{Binding Telescope.SiteElevation}" Margin="5,0,0,0" />
                                </UniformGrid>
                            </UniformGrid>
                        </Border>
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                            <UniformGrid Columns="2" >
                                <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                    <TextBlock><Run Text="Sidereal Time:"/></TextBlock>
                                    <TextBlock Text="{Binding Telescope.SiderealTimeString}" Margin="5,0,0,0" />
                                </UniformGrid>
                                <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                    <TextBlock><Run Text="Meridian in:"/></TextBlock>
                                    <TextBlock Text="{Binding Telescope.HoursToMeridianString}" Margin="5,0,0,0" />
                                </UniformGrid>
                            </UniformGrid>
                        </Border>
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                            <UniformGrid Columns="2" >
                                <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                    <TextBlock><Run Text="Right Ascension:"/></TextBlock>
                                    <TextBlock Text="{Binding Telescope.RightAscensionString}" Margin="5,0,0,0" />
                                </UniformGrid>
                                <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                    <TextBlock><Run Text="Declination:"/></TextBlock>
                                    <TextBlock Text="{Binding Telescope.DeclinationString}" Margin="5,0,0,0" />
                                </UniformGrid>
                            </UniformGrid>
                        </Border>
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                            <UniformGrid Columns="2" >
                                <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                    <TextBlock><Run Text="Altitude:"/></TextBlock>
                                    <TextBlock Text="{Binding Telescope.AltitudeString}" Margin="5,0,0,0" />
                                </UniformGrid>
                                <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                    <TextBlock><Run Text="Azimuth:"/></TextBlock>
                                    <TextBlock Text="{Binding Telescope.AzimuthString}" Margin="5,0,0,0" />
                                </UniformGrid>
                            </UniformGrid>
                        </Border>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>

        <Grid Grid.Row="1" IsEnabled="{Binding Telescope, Converter={StaticResource InverseNullToBooleanConverter}}">
            <Grid  IsEnabled="{Binding Telescope.Connected}">
                <GroupBox Header="Manual Coordinates">
                    <StackPanel>
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                            <StackPanel Orientation="Horizontal" Margin="0 6 0 6">
                                <TextBlock Width="60">Target RA</TextBlock>
                                <TextBox MinWidth="40" Margin="5,0,0,0" TextAlignment="Right">
                                    <TextBox.Text>
                                        <Binding Path="TargetRightAscencionHours" UpdateSourceTrigger="LostFocus" >
                                            <Binding.ValidationRules>
                                                <StaticResource ResourceKey="HoursRule" />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                                <TextBlock>h</TextBlock>
                                <TextBox MinWidth="40" Margin="5,0,0,0" TextAlignment="Right">
                                    <TextBox.Text>
                                        <Binding Path="TargetRightAscencionMinutes" UpdateSourceTrigger="LostFocus" >
                                            <Binding.ValidationRules>
                                                <StaticResource ResourceKey="MinutesRule" />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                                <TextBlock>m</TextBlock>
                                <TextBox MinWidth="40" Margin="5,0,0,0" TextAlignment="Right">
                                    <TextBox.Text>
                                        <Binding Path="TargetRightAscencionSeconds" UpdateSourceTrigger="LostFocus" >
                                            <Binding.ValidationRules>
                                                <StaticResource ResourceKey="SecondsRule" />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                                <TextBlock>s</TextBlock>
                            </StackPanel>
                        </Border>
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                            <StackPanel Orientation="Horizontal" Margin="0 6 0 6">
                                <TextBlock Width="60">Target Dec</TextBlock>
                                <TextBox MinWidth="40" Margin="5,0,0,0" TextAlignment="Right">
                                    <TextBox.Text>
                                        <Binding Path="TargetDeclinationDegrees" UpdateSourceTrigger="LostFocus" >
                                            <Binding.ValidationRules>
                                                <StaticResource ResourceKey="DegreesRule" />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                                <TextBlock>d</TextBlock>
                                <TextBox MinWidth="40" Margin="5,0,0,0" TextAlignment="Right">
                                    <TextBox.Text>
                                        <Binding Path="TargetDeclinationMinutes" UpdateSourceTrigger="LostFocus" >
                                            <Binding.ValidationRules>
                                                <StaticResource ResourceKey="MinutesRule" />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                                <TextBlock>m</TextBlock>
                                <TextBox MinWidth="40" Margin="5,0,0,0" TextAlignment="Right">
                                    <TextBox.Text>
                                        <Binding Path="TargetDeclinationSeconds" UpdateSourceTrigger="LostFocus" >
                                            <Binding.ValidationRules>
                                                <StaticResource ResourceKey="SecondsRule" />
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                                <TextBlock>s</TextBlock>
                            </StackPanel>
                        </Border>
                        <Button Margin="5" Height="50" Width="50" Command="{Binding SlewToCoordinatesCommand}" HorizontalAlignment="Left">
                            <TextBlock Text ="Slew" Foreground="{StaticResource ButtonForegroundBrush}"></TextBlock>
                        </Button>
                    </StackPanel>

                </GroupBox>
            </Grid>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1" IsEnabled="{Binding Telescope, Converter={StaticResource InverseNullToBooleanConverter}}">
            <Grid  IsEnabled="{Binding Telescope.Connected}">
                <GroupBox Grid.Row="1" Header="Manual Control" IsEnabled="{Binding Telescope.CanSlew}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Grid.Column="3" Orientation="Horizontal">
                            <TextBlock Margin="0,0,5,0" VerticalAlignment="Center"><Run Text="Rate:"/></TextBlock>
                            <RepeatButton Width="50" VerticalAlignment="Center" HorizontalAlignment="Center" Command="{Binding StepperMoveRateCommand}" CommandParameter="-">
                                <TextBlock Text ="&#x25BC;" Foreground="{StaticResource ButtonForegroundBrush}"></TextBlock>
                            </RepeatButton>
                            <TextBox VerticalAlignment="Center" Text="{Binding Telescope.MovingRate}" MinWidth="40" />
                            <RepeatButton VerticalAlignment="Center" Width="50" HorizontalAlignment="Center" Command="{Binding StepperMoveRateCommand}" CommandParameter="+">
                                <TextBlock Text ="&#x25B2;" Foreground="{StaticResource ButtonForegroundBrush}"></TextBlock>
                            </RepeatButton>
                        </StackPanel>
                        <Button Grid.Row="1" Grid.Column="0" Height="80" Width="80" HorizontalAlignment="Right"   >
                            <TextBlock Text ="W" Foreground="{StaticResource ButtonForegroundBrush}"></TextBlock>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="PreviewStylusDown">
                                    <i:InvokeCommandAction CommandParameter="W" Command="{Binding MoveCommand}"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="PreviewStylusUp">
                                    <i:InvokeCommandAction CommandParameter="W" Command="{Binding StopMoveCommand}"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="PreviewTouchDown">
                                    <i:InvokeCommandAction CommandParameter="W" Command="{Binding MoveCommand}"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="PreviewTouchUp">
                                    <i:InvokeCommandAction CommandParameter="W" Command="{Binding StopMoveCommand}"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                    <i:InvokeCommandAction CommandParameter="W" Command="{Binding MoveCommand}"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="PreviewMouseLeftButtonUp" >
                                    <i:InvokeCommandAction CommandParameter="W" Command="{Binding StopMoveCommand}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                        <Button Grid.Row="1" Grid.Column="2" Height="80" Width="80" HorizontalAlignment="Left"  >
                            <TextBlock Text ="O" Foreground="{StaticResource ButtonForegroundBrush}"></TextBlock>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="PreviewStylusDown">
                                    <i:InvokeCommandAction CommandParameter="O" Command="{Binding MoveCommand}"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="PreviewStylusUp">
                                    <i:InvokeCommandAction CommandParameter="O" Command="{Binding StopMoveCommand}"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="PreviewTouchDown">
                                    <i:InvokeCommandAction CommandParameter="O" Command="{Binding MoveCommand}"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="PreviewTouchUp">
                                    <i:InvokeCommandAction CommandParameter="O" Command="{Binding StopMoveCommand}"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                    <i:InvokeCommandAction CommandParameter="O" Command="{Binding MoveCommand}"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="PreviewMouseLeftButtonUp" >
                                    <i:InvokeCommandAction CommandParameter="O" Command="{Binding StopMoveCommand}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                        <Button Grid.Row="0" Grid.Column="1" Height="80" Width="80" VerticalAlignment="Bottom" >
                            <TextBlock Text ="N" Foreground="{StaticResource ButtonForegroundBrush}"></TextBlock>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="PreviewStylusDown">
                                    <i:InvokeCommandAction CommandParameter="N" Command="{Binding MoveCommand}"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="PreviewStylusUp">
                                    <i:InvokeCommandAction CommandParameter="N" Command="{Binding StopMoveCommand}"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="PreviewTouchDown">
                                    <i:InvokeCommandAction CommandParameter="N" Command="{Binding MoveCommand}"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="PreviewTouchUp">
                                    <i:InvokeCommandAction CommandParameter="N" Command="{Binding StopMoveCommand}"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                    <i:InvokeCommandAction CommandParameter="N" Command="{Binding MoveCommand}"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="PreviewMouseLeftButtonUp" >
                                    <i:InvokeCommandAction CommandParameter="N" Command="{Binding StopMoveCommand}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                        <Button Grid.Row="2" Grid.Column="1" Height="80" Width="80" VerticalAlignment="Top">
                            <TextBlock Text ="S" Foreground="{StaticResource ButtonForegroundBrush}"></TextBlock>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="PreviewStylusDown">
                                    <i:InvokeCommandAction CommandParameter="S" Command="{Binding MoveCommand}"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="PreviewStylusUp">
                                    <i:InvokeCommandAction CommandParameter="S" Command="{Binding StopMoveCommand}"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="PreviewTouchDown">
                                    <i:InvokeCommandAction CommandParameter="S" Command="{Binding MoveCommand}"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="PreviewTouchUp">
                                    <i:InvokeCommandAction CommandParameter="S" Command="{Binding StopMoveCommand}"/>
                                </i:EventTrigger>

                                <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                    <i:InvokeCommandAction CommandParameter="S" Command="{Binding MoveCommand}"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="PreviewMouseLeftButtonUp" >
                                    <i:InvokeCommandAction CommandParameter="S" Command="{Binding StopMoveCommand}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                        <Button Grid.Row="1" Grid.Column="1" Height="80" Width="80" Command="{Binding StopSlewCommand}">
                            <TextBlock Text ="STOP" Foreground="{StaticResource ButtonForegroundBrush}"></TextBlock>
                        </Button>

                        <Button Grid.Row="2" Grid.Column="3" Height="80" Width="80" Command="{Binding ParkCommand}" HorizontalAlignment="Right" Visibility="{Binding Telescope.AtPark, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                            <TextBlock Text ="PARK" Foreground="{StaticResource ButtonForegroundBrush}"></TextBlock>
                        </Button>
                        <Grid HorizontalAlignment="Right" Grid.Row="2" Grid.Column="3" Height="80" Width="80" Visibility="{Binding Telescope, Converter={StaticResource NullToVisibilityConverter}}" >
                            <Button Command="{Binding UnparkCommand}"  Visibility="{Binding Telescope.AtPark, Converter={StaticResource VisibilityConverter}}">
                                <TextBlock Text ="UNPARK" Foreground="{StaticResource ButtonForegroundBrush}"></TextBlock>
                            </Button>
                        </Grid>
                        
                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
