<UserControl
    x:Class="NINA.View.Equipment.ToupCamSetupView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enum="clr-namespace:NINA.Model.MyCamera"
    xmlns:local="clr-namespace:NINA.View.Equipment"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ns="clr-namespace:NINA.Locale"
    xmlns:util="clr-namespace:NINA.Utility"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBlock
                Width="178"
                VerticalAlignment="Center"
                Text="{ns:Loc LblMode}" />
            <ComboBox
                MinWidth="150"
                Margin="0,0,0,0"
                ItemsSource="{Binding Source={util:EnumBindingSource {x:Type enum:ToupCamImageMode}}}"
                SelectedItem="{Binding Mode}" />
        </StackPanel>
    </Grid>
</UserControl>