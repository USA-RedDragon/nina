<UserControl x:Class="NINA.View.OverView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NINA.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="5"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="5" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <local:ImageControlView DataContext="{Binding ImagingVM.ImageControl}" Grid.ColumnSpan="3"/>
        
        <GridSplitter Grid.ColumnSpan="3" Grid.Row="1" HorizontalAlignment="Stretch" />
        
        <local:SequenceView Grid.Row="2" IsEnabled="False" DataContext="{Binding ImagingVM.SeqVM}" Margin="0,0,0,1" />

        <GridSplitter Grid.Row="1" Grid.Column="1" Grid.RowSpan="4" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

        <local:CameraCoolingChartsView Grid.Row="2" Grid.Column="2" Grid.RowSpan="3"  DataContext="{Binding CameraVM}"></local:CameraCoolingChartsView>
        
        <GridSplitter Grid.Row="3" HorizontalAlignment="Stretch" />
        
        <local:PHD2Graph Grid.Row="4" DataContext="{Binding PHD2VM}" />
    </Grid>
</UserControl>
