<UserControl
    x:Class="NINA.View.CameraView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NINA.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ninactrl="clr-namespace:NINACustomControlLibrary;assembly=NINACustomControlLibrary"
    xmlns:ns="clr-namespace:NINA.Locale"
    xmlns:util="clr-namespace:NINA.Utility"
    xmlns:view="clr-namespace:NINA.View"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.RowSpan="2">
            <GroupBox>
                <GroupBox.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="20"
                            Text="{ns:Loc LblCamera}" />
                        <Grid Grid.Column="1" Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition Width="40" />
                            </Grid.ColumnDefinitions>
                            <ninactrl:LoadingControl
                                Height="30"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                LoadingImageBrush="{StaticResource PrimaryBrush}"
                                Visibility="{Binding ChooseCameraCommand.Execution.IsNotCompleted, Converter={StaticResource BooleanToVisibilityCollapsedConverter}, FallbackValue=Collapsed}" />
                            <ComboBox
                                Grid.Column="1"
                                MinHeight="40"
                                DisplayMemberPath="Name"
                                IsEnabled="{Binding CameraInfo.Connected, Converter={StaticResource InverseBooleanConverter}}"
                                ItemsSource="{Binding CameraChooserVM.Devices}"
                                SelectedItem="{Binding CameraChooserVM.SelectedDevice}"
                                SelectedValuePath="Name" />
                            <Button
                                Grid.Column="2"
                                Width="40"
                                Height="40"
                                Command="{Binding CameraChooserVM.SetupDialogCommand}"
                                IsEnabled="{Binding CameraChooserVM.SelectedDevice.HasSetupDialog}">
                                <Button.ToolTip>
                                    <ToolTip ToolTipService.ShowOnDisabled="False">
                                        <TextBlock Text="{ns:Loc LblSettings}" />
                                    </ToolTip>
                                </Button.ToolTip>
                                <Grid>
                                    <Path
                                        Margin="5"
                                        Data="{StaticResource SettingsSVG}"
                                        Fill="{StaticResource ButtonForegroundBrush}"
                                        Stretch="Uniform" />
                                </Grid>
                            </Button>
                            <Button
                                Grid.Column="3"
                                Width="40"
                                Height="40"
                                Command="{Binding RefreshCameraListCommand}">
                                <Button.ToolTip>
                                    <ToolTip ToolTipService.ShowOnDisabled="False">
                                        <TextBlock Text="{ns:Loc LblRescanDevices}" />
                                    </ToolTip>
                                </Button.ToolTip>
                                <Grid>
                                    <Path
                                        Margin="5"
                                        Data="{StaticResource LoopSVG}"
                                        Fill="{StaticResource ButtonForegroundBrush}"
                                        Stretch="Uniform" />
                                </Grid>
                            </Button>
                            <Grid
                                Grid.Column="4"
                                Width="40"
                                Height="40"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">

                                <ninactrl:CancellableButton
                                    ButtonForegroundBrush="{StaticResource ButtonForegroundDisabledBrush}"
                                    ButtonImage="{StaticResource PowerSVG}"
                                    CancelButtonImage="{StaticResource CancelSVG}"
                                    CancelCommand="{Binding CancelConnectCameraCommand}"
                                    Command="{Binding ChooseCameraCommand}"
                                    IsEnabled="{Binding CameraInfo.Connected, Converter={StaticResource InverseBooleanConverter}}"
                                    ToolTip="{ns:Loc LblConnect}"
                                    Visibility="{Binding CameraInfo.Connected, Converter={StaticResource InverseBoolToVisibilityConverter}}" />

                                <Grid Visibility="{Binding Cam, Converter={StaticResource NullToVisibilityConverter}}">
                                    <Button
                                        Command="{Binding DisconnectCommand}"
                                        IsEnabled="{Binding CameraInfo.Connected}"
                                        Visibility="{Binding CameraInfo.Connected, Converter={StaticResource VisibilityConverter}}">
                                        <Button.ToolTip>
                                            <ToolTip ToolTipService.ShowOnDisabled="False">
                                                <TextBlock Text="{ns:Loc LblDisconnect}" />
                                            </ToolTip>
                                        </Button.ToolTip>
                                        <Grid>
                                            <Path
                                                Margin="5"
                                                Data="{StaticResource PowerSVG}"
                                                Fill="{StaticResource ButtonForegroundBrush}"
                                                Stretch="Uniform" />
                                        </Grid>
                                    </Button>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                </GroupBox.Header>
                <Grid>
                    <StackPanel>
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0">
                            <UniformGrid Columns="2">
                                <UniformGrid
                                    Margin="0,6,0,6"
                                    VerticalAlignment="Center"
                                    Columns="2">
                                    <TextBlock Text="{ns:Loc LblCameraState}" />
                                    <TextBlock Margin="5,0,0,0" Text="{Binding CameraInfo.CameraState}" />
                                </UniformGrid>
                            </UniformGrid>
                        </Border>
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0">
                            <Grid Margin="0,6,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{ns:Loc LblName}" />
                                <TextBlock
                                    Grid.Column="1"
                                    Grid.ColumnSpan="3"
                                    Margin="5,0,0,0"
                                    Text="{Binding Cam.Name}"
                                    TextWrapping="WrapWithOverflow" />
                            </Grid>
                        </Border>
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0">
                            <Grid Margin="0,6,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{ns:Loc LblDescription}" />
                                <TextBlock
                                    Grid.Column="1"
                                    Grid.ColumnSpan="3"
                                    Margin="5,0,0,0"
                                    Text="{Binding Cam.Description}"
                                    TextWrapping="WrapWithOverflow" />
                            </Grid>
                        </Border>
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0">
                            <UniformGrid Columns="2">
                                <UniformGrid
                                    Margin="0,6,0,6"
                                    VerticalAlignment="Center"
                                    Columns="2">
                                    <TextBlock Text="{ns:Loc LblDriverInfo}" />
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        Text="{Binding Cam.DriverInfo}"
                                        TextWrapping="WrapWithOverflow" />
                                </UniformGrid>
                                <UniformGrid
                                    Margin="0,6,0,6"
                                    VerticalAlignment="Center"
                                    Columns="2">
                                    <TextBlock Text="{ns:Loc LblDriverVersion}" />
                                    <TextBlock Margin="5,0,0,0" Text="{Binding Cam.DriverVersion}" />
                                </UniformGrid>
                            </UniformGrid>
                        </Border>
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0">
                            <UniformGrid Columns="2">
                                <UniformGrid
                                    Margin="0,6,0,6"
                                    VerticalAlignment="Center"
                                    Columns="2">
                                    <TextBlock Text="{ns:Loc LblSensorType}" />
                                    <TextBlock
                                        Margin="5,0,0,0"
                                        Text="{Binding Cam.SensorType}"
                                        TextWrapping="WrapWithOverflow" />
                                </UniformGrid>
                                <UniformGrid
                                    Margin="0,6,0,6"
                                    VerticalAlignment="Center"
                                    Columns="2">
                                    <TextBlock Text="{ns:Loc LblSensorName}" />
                                    <TextBlock Margin="5,0,0,0" Text="{Binding Cam.SensorName}" />
                                </UniformGrid>
                            </UniformGrid>
                        </Border>
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0">
                            <UniformGrid Columns="2">
                                <UniformGrid
                                    Margin="0,6,0,6"
                                    VerticalAlignment="Center"
                                    Columns="2">
                                    <TextBlock Text="{ns:Loc LblCameraXSize}" />
                                    <TextBlock Margin="5,0,0,0" Text="{Binding Cam.CameraXSize}" />
                                </UniformGrid>
                                <UniformGrid
                                    Margin="0,6,0,6"
                                    VerticalAlignment="Center"
                                    Columns="2">
                                    <TextBlock Text="{ns:Loc LblCameraYSize}" />
                                    <TextBlock Margin="5,0,0,0" Text="{Binding Cam.CameraYSize}" />
                                </UniformGrid>
                            </UniformGrid>
                        </Border>
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0">
                            <UniformGrid Columns="2">
                                <UniformGrid
                                    Margin="0,6,0,6"
                                    VerticalAlignment="Center"
                                    Columns="2">
                                    <TextBlock Text="{ns:Loc LblMinExpTime}" />
                                    <TextBlock Margin="5,0,0,0" Text="{Binding Cam.ExposureMin}" />
                                </UniformGrid>
                                <UniformGrid
                                    Margin="0,6,0,6"
                                    VerticalAlignment="Center"
                                    Columns="2">
                                    <TextBlock Text="{ns:Loc LblMaxExpTime}" />
                                    <TextBlock Margin="5,0,0,0" Text="{Binding Cam.ExposureMax}" />
                                </UniformGrid>
                            </UniformGrid>
                        </Border>
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0">
                            <UniformGrid Columns="2">
                                <UniformGrid
                                    Margin="0,6,0,6"
                                    VerticalAlignment="Center"
                                    Columns="2">
                                    <TextBlock Text="{ns:Loc LblMaxBinX}" />
                                    <TextBlock Margin="5,0,0,0" Text="{Binding Cam.MaxBinX}" />
                                </UniformGrid>
                                <UniformGrid
                                    Margin="0,6,0,6"
                                    VerticalAlignment="Center"
                                    Columns="2">
                                    <TextBlock Text="{ns:Loc LblMaxBinY}" />
                                    <TextBlock Margin="5,0,0,0" Text="{Binding Cam.MaxBinY}" />
                                </UniformGrid>
                            </UniformGrid>
                        </Border>
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0">
                            <UniformGrid Columns="2">
                                <UniformGrid
                                    Margin="0,6,0,6"
                                    VerticalAlignment="Center"
                                    Columns="2">
                                    <TextBlock Text="{ns:Loc LblPixelSizeX}" />
                                    <TextBlock Margin="5,0,0,0" Text="{Binding Cam.PixelSizeX}" />
                                </UniformGrid>
                                <UniformGrid
                                    Margin="0,6,0,6"
                                    VerticalAlignment="Center"
                                    Columns="2">
                                    <TextBlock Text="{ns:Loc LblPixelSizeY}" />
                                    <TextBlock Margin="5,0,0,0" Text="{Binding Cam.PixelSizeY}" />
                                </UniformGrid>
                            </UniformGrid>
                        </Border>
                        <Border
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0"
                            Visibility="{Binding Cam.HasBattery, Converter={StaticResource VisibilityConverter}, FallbackValue=Collapsed}">
                            <UniformGrid Columns="2">
                                <UniformGrid
                                    Margin="0,6,0,6"
                                    VerticalAlignment="Center"
                                    Columns="2">
                                    <TextBlock Text="{ns:Loc LblCameraBattery}" />
                                    <TextBlock Margin="5,0,0,0" Text="{Binding CameraInfo.Battery, StringFormat=\{0:0.00\}%}" />
                                </UniformGrid>
                            </UniformGrid>
                        </Border>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>

        <Grid Grid.Row="2" IsEnabled="{Binding Cam, Converter={StaticResource InverseNullToBooleanConverter}}">
            <GroupBox
                Grid.Column="1"
                Header="{ns:Loc LblCamSettings}"
                IsEnabled="{Binding CameraInfo.Connected}">
                <StackPanel Visibility="{Binding Cam, Converter={StaticResource NullToVisibilityConverter}}">
                    <DockPanel Visibility="{Binding Cam.CanGetGain, Converter={StaticResource VisibilityConverter}}">
                        <TextBlock
                            MinWidth="100"
                            VerticalAlignment="Center"
                            Text="{ns:Loc LblGain}" />
                        <TextBlock
                            MinWidth="100"
                            VerticalAlignment="Center"
                            Text="{Binding Cam.Gain}" />
                        <Grid>
                            <Slider
                                IsEnabled="{Binding Cam.CanSetGain}"
                                IsSnapToTickEnabled="True"
                                Maximum="{Binding Cam.GainMax}"
                                Minimum="{Binding Cam.GainMin}"
                                TickPlacement="BottomRight"
                                Visibility="{Binding Cam.Gains, Converter={StaticResource InverseCollectionContainsItemsToVisibilityConverter}}"
                                Value="{Binding Cam.Gain}" />
                            <ComboBox
                                ItemsSource="{Binding Cam.Gains}"
                                SelectedItem="{Binding Cam.Gain}"
                                Visibility="{Binding Cam.Gains, Converter={StaticResource CollectionContainsItemsToVisibilityConverter}}" />
                        </Grid>
                    </DockPanel>
                    <DockPanel Visibility="{Binding Cam.CanSetOffset, Converter={StaticResource VisibilityConverter}}">
                        <TextBlock
                            MinWidth="100"
                            VerticalAlignment="Center"
                            Text="{ns:Loc LblOffset}" />
                        <TextBlock
                            MinWidth="100"
                            VerticalAlignment="Center"
                            Text="{Binding Cam.Offset}" />
                        <Slider
                            IsSnapToTickEnabled="True"
                            Maximum="{Binding Cam.OffsetMax}"
                            Minimum="{Binding Cam.OffsetMin}"
                            SmallChange="1"
                            TickPlacement="BottomRight"
                            Value="{Binding Cam.Offset}" />
                    </DockPanel>
                    <DockPanel Visibility="{Binding Cam.CanSetUSBLimit, Converter={StaticResource VisibilityConverter}}">
                        <TextBlock
                            MinWidth="100"
                            VerticalAlignment="Center"
                            Text="{ns:Loc LblUSBLimit}" />
                        <TextBlock
                            MinWidth="100"
                            VerticalAlignment="Center"
                            Text="{Binding Cam.USBLimit}" />
                        <Slider
                            IsSnapToTickEnabled="True"
                            Maximum="{Binding Cam.USBLimitMax}"
                            Minimum="{Binding Cam.USBLimitMin}"
                            SmallChange="1"
                            TickPlacement="BottomRight"
                            Value="{Binding Cam.USBLimit}" />
                    </DockPanel>
                </StackPanel>
            </GroupBox>
        </Grid>
        <Grid
            Grid.RowSpan="3"
            Grid.Column="1"
            IsEnabled="{Binding Cam, Converter={StaticResource InverseNullToBooleanConverter}}">
            <Grid IsEnabled="{Binding CameraInfo.Connected}">
                <GroupBox Header="{ns:Loc LblTempControl}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Vertical">

                            <Border
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="0"
                                Visibility="{Binding Cam.CanSetTemperature, Converter={StaticResource VisibilityConverter}, FallbackValue=Collapsed}">
                                <UniformGrid Columns="2">
                                    <UniformGrid
                                        Margin="0,6,0,6"
                                        VerticalAlignment="Center"
                                        Columns="2">
                                        <TextBlock VerticalAlignment="Center" Text="{ns:Loc LblCoolerOn}" />
                                        <CheckBox
                                            Width="75"
                                            Height="25"
                                            Margin="5,0,0,0"
                                            HorizontalAlignment="Left"
                                            Command="{Binding ToggleCoolerOnCommand}"
                                            CommandParameter="{Binding Path=IsChecked, RelativeSource={RelativeSource Self}}"
                                            IsChecked="{Binding CameraInfo.CoolerOn}" />
                                    </UniformGrid>
                                </UniformGrid>
                            </Border>
                            <Border
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="0"
                                Visibility="{Binding Cam.CanSetTemperature, Converter={StaticResource VisibilityConverter}, FallbackValue=Collapsed}">
                                <UniformGrid Columns="2">
                                    <UniformGrid
                                        Margin="0,6,0,6"
                                        VerticalAlignment="Center"
                                        Columns="2">
                                        <TextBlock Text="{ns:Loc LblCoolerPower}" />
                                        <TextBlock
                                            Margin="5,0,0,0"
                                            Text="{Binding CameraInfo.CoolerPower, StringFormat=\{0:0.00\}%}"
                                            Visibility="{Binding CameraInfo.Connected, Converter={StaticResource VisibilityConverter}}" />
                                    </UniformGrid>
                                </UniformGrid>
                            </Border>
                            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0">
                                <UniformGrid Columns="2">
                                    <UniformGrid
                                        Margin="0,6,0,6"
                                        VerticalAlignment="Center"
                                        Columns="2">
                                        <TextBlock Text="{ns:Loc LblChipTemp}" />
                                        <TextBlock
                                            Margin="5,0,0,0"
                                            Text="{Binding CameraInfo.Temperature, StringFormat=\{0:0.00\}}"
                                            Visibility="{Binding CameraInfo.Connected, Converter={StaticResource VisibilityConverter}}" />
                                    </UniformGrid>
                                </UniformGrid>
                            </Border>
                            <Border
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="0"
                                Visibility="{Binding Cam.CanSetTemperature, Converter={StaticResource VisibilityConverter}, FallbackValue=Collapsed}">
                                <UniformGrid Columns="2">
                                    <UniformGrid
                                        Margin="0,6,0,6"
                                        VerticalAlignment="Center"
                                        Columns="2">
                                        <TextBlock Text="{ns:Loc LblTargetTemp}" />
                                        <TextBlock
                                            MinWidth="20"
                                            Margin="5,0,0,0"
                                            Text="{Binding Cam.TemperatureSetPoint, StringFormat=\{0:0.00\}}"
                                            Visibility="{Binding CameraInfo.Connected, Converter={StaticResource VisibilityConverter}}" />
                                    </UniformGrid>
                                </UniformGrid>
                            </Border>

                            <Grid VerticalAlignment="Bottom"
                                Visibility="{Binding Cam.CanSetTemperature, Converter={StaticResource VisibilityConverter}, FallbackValue=Collapsed}">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="40" />
                                </Grid.RowDefinitions>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="110" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="30" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        DockPanel.Dock="Left"
                                        Text="{ns:Loc LblTargetTemp}" />
                                    <Slider
                                        Grid.Column="1"
                                        IsEnabled="{Binding CoolingRunning, Converter={StaticResource InverseBooleanConverter}}"
                                        IsSnapToTickEnabled="True"
                                        Maximum="20"
                                        Minimum="-50"
                                        SmallChange="1"
                                        TickPlacement="BottomRight"
                                        Value="{Binding TargetTemp}" />
                                    <TextBlock
                                        Grid.Column="2"
                                        VerticalAlignment="Center"
                                        DockPanel.Dock="Right"
                                        Text="{Binding TargetTemp, StringFormat=\{0:0.0\}}" />
                                </Grid>

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="110" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="30" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock VerticalAlignment="Center" Text="{ns:Loc LblDuration}" />
                                    <Slider
                                        Grid.Column="1"
                                        IsEnabled="{Binding CoolingRunning, Converter={StaticResource InverseBooleanConverter}}"
                                        IsSnapToTickEnabled="True"
                                        Maximum="30"
                                        Minimum="0"
                                        SmallChange="1"
                                        TickPlacement="BottomRight"
                                        Value="{Binding Duration}" />
                                    <TextBlock
                                        Grid.Column="2"
                                        VerticalAlignment="Center"
                                        Text="{Binding Duration, StringFormat=\{0:0.0\}}" />
                                </Grid>

                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="40" />
                                    </Grid.ColumnDefinitions>
                                    <Grid
                                        Height="40"
                                        Margin="5,0,5,0"
                                        Visibility="{Binding CoolingRunning, Converter={StaticResource BooleanToVisibilityCollapsedConverter}}">
                                        <ProgressBar
                                            Maximum="1"
                                            Minimum="0"
                                            Value="{Binding CoolingProgress}" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="{Binding CoolingProgress, StringFormat=\{0:#%\}}" />
                                    </Grid>
                                    <ninactrl:CancellableButton
                                        Grid.Column="1"
                                        Width="40"
                                        Height="40"
                                        HorizontalAlignment="Right"
                                        ButtonImage="{StaticResource ThermometerSVG}"
                                        CancelButtonImage="{StaticResource CancelSVG}"
                                        CancelCommand="{Binding CancelCoolCamCommand}"
                                        Command="{Binding CoolCamCommand}"
                                        ToolTip="{ns:Loc LblCoolCamBtnTooltip}" />
                                </Grid>
                            </Grid>
                        </StackPanel>

                        <view:CameraCoolingChartsView
                            Grid.Row="1"
                            Margin="5"
                            DataContext="{Binding}" />
                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>
    </Grid>
</UserControl>