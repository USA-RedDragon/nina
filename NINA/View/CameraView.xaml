<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NINA.View"  
             xmlns:view="clr-namespace:NINA.View"
             xmlns:util="clr-namespace:NINA.Utility" x:Class="NINA.View.CameraView"        
             xmlns:ns="clr-namespace:NINA.Locale"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid >

        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.RowSpan="2">
            <GroupBox >
                <GroupBox.Header>
                    <UniformGrid Columns="2" >
                        <TextBlock Text="{ns:Loc LblCam}" VerticalAlignment="Center" FontSize="20"></TextBlock>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition Width="40" />
                            </Grid.ColumnDefinitions>
                            <ComboBox MinHeight="40" 
                                      IsEnabled="{Binding Cam.Connected, Converter={StaticResource InverseBooleanConverter}}"
                                      ItemsSource="{Binding CameraChooserVM.Devices}" 
                                      SelectedItem="{Binding CameraChooserVM.SelectedDevice}" 
                                      SelectedValuePath="Name" 
                                      DisplayMemberPath="Name"  ></ComboBox>
                            <Button Grid.Column="1" Width="40" Height="40"  Command="{Binding CameraChooserVM.SetupDialogCommand}"  IsEnabled="{Binding CameraChooserVM.SelectedDevice.HasSetupDialog}">
                                <Button.ToolTip>
                                    <ToolTip ToolTipService.ShowOnDisabled="False">
                                        <TextBlock Text="{ns:Loc LblSettings}" />
                                    </ToolTip>
                                </Button.ToolTip>
                                <Grid>
                                    <Path Fill="{StaticResource ButtonForegroundBrush}" Data="{StaticResource SettingsSVG}" Stretch="Uniform" Margin="5">
                                    </Path>
                                </Grid>
                            </Button>
                            <Button Grid.Column="2" Height="40" Width="40" Command="{Binding RefreshCameraListCommand}">
                                <Button.ToolTip>
                                    <ToolTip ToolTipService.ShowOnDisabled="False">
                                        <TextBlock Text="Rescan devices" />
                                    </ToolTip>
                                </Button.ToolTip>
                                <Grid>
                                    <Path Fill="{StaticResource ButtonForegroundBrush}" Data="{StaticResource LoopSVG}" Stretch="Uniform" Margin="5">
                                    </Path>
                                </Grid>
                            </Button>
                            <Grid Height="40" Width="40" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Button   Command="{Binding ChooseCameraCommand}"  
                                                  IsEnabled="{Binding Cam.Connected, Converter={StaticResource InverseBooleanConverter}}"
                                                  Visibility="{Binding Cam.Connected, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                    <Button.ToolTip>
                                        <ToolTip ToolTipService.ShowOnDisabled="False">
                                            <TextBlock Text="Connect" />
                                        </ToolTip>
                                    </Button.ToolTip>
                                    <Grid>
                                        <Path Fill="{StaticResource ButtonForegroundDisabledBrush}" Data="{StaticResource PowerSVG}" Stretch="Uniform" Margin="5">
                                        </Path>
                                    </Grid>
                                </Button>
                                <Grid Visibility="{Binding Cam, Converter={StaticResource NullToVisibilityConverter}}">
                                    <Button Command="{Binding DisconnectCommand}" 
                                                    IsEnabled="{Binding Cam.Connected}"
                                                    Visibility="{Binding Cam.Connected, Converter={StaticResource VisibilityConverter}}">
                                        <Button.ToolTip>
                                            <ToolTip ToolTipService.ShowOnDisabled="False">
                                                <TextBlock Text="Disconnect" />
                                            </ToolTip>
                                        </Button.ToolTip>
                                        <Grid>
                                            <Path Fill="{StaticResource ButtonForegroundBrush}" Data="{StaticResource PowerSVG}" Stretch="Uniform" Margin="5">
                                            </Path>
                                        </Grid>
                                    </Button>
                                </Grid>
                            </Grid>
                        </Grid>
                    </UniformGrid>
                </GroupBox.Header>
                <Grid >
                    <StackPanel>
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                            <UniformGrid Columns="2" >
                                <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                    <TextBlock Text="{ns:Loc LblCameraState}"></TextBlock>
                                    <TextBlock Text="{Binding Cam.CameraState}" Margin="5,0,0,0" />
                                </UniformGrid>
                            </UniformGrid>
                        </Border>
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                            <Grid Margin="0 6 0 6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock  Text="{ns:Loc LblName}"></TextBlock>
                                <TextBlock Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding Cam.Name}" Margin="5,0,0,0" TextWrapping="WrapWithOverflow" />
                            </Grid>
                        </Border>
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                            <Grid Margin="0 6 0 6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{ns:Loc LblDescription}"></TextBlock>
                                <TextBlock Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding Cam.Description}" Margin="5,0,0,0" TextWrapping="WrapWithOverflow" />
                            </Grid>
                        </Border>
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                            <UniformGrid Columns="2">
                                <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                    <TextBlock Text="{ns:Loc LblDriverInfo}"></TextBlock>
                                    <TextBlock Text="{Binding Cam.DriverInfo}" Margin="5,0,0,0" TextWrapping="WrapWithOverflow" />
                                </UniformGrid>
                                <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                    <TextBlock Text="{ns:Loc LblDriverVersion}"></TextBlock>
                                    <TextBlock Text="{Binding Cam.DriverVersion}" Margin="5,0,0,0" />
                                </UniformGrid>
                            </UniformGrid>
                        </Border>
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                            <UniformGrid Columns="2">
                                <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                    <TextBlock Text="{ns:Loc LblSensorType}"></TextBlock>
                                    <TextBlock Text="{Binding Cam.SensorType}" Margin="5,0,0,0" TextWrapping="WrapWithOverflow" />
                                </UniformGrid>
                                <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                    <TextBlock Text="{ns:Loc LblSensorName}"></TextBlock>
                                    <TextBlock Text="{Binding Cam.SensorName}" Margin="5,0,0,0" />
                                </UniformGrid>
                            </UniformGrid>
                        </Border>
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                            <UniformGrid Columns="2">
                                <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                    <TextBlock Text="{ns:Loc LblCameraXSize}"></TextBlock>
                                    <TextBlock Text="{Binding Cam.CameraXSize}" Margin="5,0,0,0" />
                                </UniformGrid>
                                <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                    <TextBlock Text="{ns:Loc LblCameraYSize}"></TextBlock>
                                    <TextBlock Text="{Binding Cam.CameraYSize}" Margin="5,0,0,0" />
                                </UniformGrid>
                            </UniformGrid>
                        </Border>
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                            <UniformGrid Columns="2">
                                <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                    <TextBlock Text="{ns:Loc LblMinExpTime}"></TextBlock>
                                    <TextBlock Text="{Binding Cam.ExposureMin}" Margin="5,0,0,0" />
                                </UniformGrid>
                                <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                    <TextBlock Text="{ns:Loc LblMaxExpTime}"></TextBlock>
                                    <TextBlock Text="{Binding Cam.ExposureMax}" Margin="5,0,0,0" />
                                </UniformGrid>
                            </UniformGrid>
                        </Border>
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                            <UniformGrid Columns="2">
                                <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                    <TextBlock Text="{ns:Loc LblMaxBinX}"></TextBlock>
                                    <TextBlock Text="{Binding Cam.MaxBinX}" Margin="5,0,0,0" />
                                </UniformGrid>
                                <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                    <TextBlock Text="{ns:Loc LblMaxBinY}"></TextBlock>
                                    <TextBlock Text="{Binding Cam.MaxBinY}" Margin="5,0,0,0" />
                                </UniformGrid>
                            </UniformGrid>
                        </Border>
                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                            <UniformGrid Columns="2">
                                <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                    <TextBlock Text="{ns:Loc LblPixelSizeX}"></TextBlock>
                                    <TextBlock Text="{Binding Cam.PixelSizeX}" Margin="5,0,0,0" />
                                </UniformGrid>
                                <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                    <TextBlock Text="{ns:Loc LblPixelSizeY}"></TextBlock>
                                    <TextBlock Text="{Binding Cam.PixelSizeY}" Margin="5,0,0,0" />
                                </UniformGrid>
                            </UniformGrid>
                        </Border>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>



        
        <Grid Grid.Row="2" IsEnabled="{Binding Cam, Converter={StaticResource InverseNullToBooleanConverter}}">
            <GroupBox Header="{ns:Loc LblCamSettings}" Grid.Column="1" IsEnabled="{Binding Cam.Connected}">
                <StackPanel>
                    <DockPanel Visibility="{Binding Cam.CanGetGain , Converter={StaticResource VisibilityConverter}}">
                        <TextBlock VerticalAlignment="Center" MinWidth="100" Text="{ns:Loc LblGain}"></TextBlock>
                        <TextBlock VerticalAlignment="Center" MinWidth="100" Text="{Binding Cam.Gain}"></TextBlock>
                        <Slider Minimum="{Binding Cam.GainMin}" Maximum="{Binding Cam.GainMax}" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Ticks="{Binding Cam.GainTicks}" Value="{Binding Cam.Gain}" IsEnabled="{Binding Cam.CanSetGain}"></Slider>
                    </DockPanel>
                    <DockPanel  Visibility="{Binding Cam.CanSetOffset , Converter={StaticResource VisibilityConverter}}">
                        <TextBlock VerticalAlignment="Center" MinWidth="100" Text="{ns:Loc LblOffset}"></TextBlock>
                        <TextBlock VerticalAlignment="Center" MinWidth="100" Text="{Binding Cam.Offset}"></TextBlock>
                        <Slider Minimum="{Binding Cam.OffsetMin}" Maximum="{Binding Cam.OffsetMax}" SmallChange="1" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Value="{Binding Cam.Offset}"></Slider>
                    </DockPanel>
                    <DockPanel Visibility="{Binding Cam.CanSetUSBLimit , Converter={StaticResource VisibilityConverter}}">
                        <TextBlock VerticalAlignment="Center" MinWidth="100" Text="{ns:Loc LblUSBLimit}"></TextBlock>
                        <TextBlock VerticalAlignment="Center" MinWidth="100" Text="{Binding Cam.USBLimit}"></TextBlock>
                        <Slider Minimum="{Binding Cam.USBLimitMin}" Maximum="{Binding Cam.USBLimitMax}" SmallChange="1" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Value="{Binding Cam.USBLimit}" ></Slider>
                    </DockPanel>
                </StackPanel>
            </GroupBox>            
        </Grid>
        <Grid Grid.Column="1" Grid.RowSpan="3" IsEnabled="{Binding Cam, Converter={StaticResource InverseNullToBooleanConverter}}">
            <Grid IsEnabled="{Binding Cam.Connected}">
                <GroupBox Header="{ns:Loc LblTempControl}" IsEnabled="{Binding Cam.CanSetCCDTemperature}" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Vertical">
                            
                            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                                <UniformGrid Columns="2" >
                                    <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                        <TextBlock Text="{ns:Loc LblCoolerOn}" VerticalAlignment="Center"></TextBlock>
                                        <CheckBox IsChecked="{Binding Cam.CoolerOn}" Width="75" Height="25" HorizontalAlignment="Left"  Margin="5,0,0,0"/>
                                    </UniformGrid>
                                </UniformGrid>
                            </Border>
                            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                                <UniformGrid Columns="2" >
                                    <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                        <TextBlock Text="{ns:Loc LblCoolerPower}"></TextBlock>
                                        <TextBlock Text="{Binding Cam.CoolerPower, StringFormat=\{0:#.00\}%}" Margin="5,0,0,0" Visibility="{Binding Cam.Connected, Converter={StaticResource VisibilityConverter}}"/>
                                    </UniformGrid>
                                </UniformGrid>
                            </Border>
                            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                                <UniformGrid Columns="2" >
                                    <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                        <TextBlock Text="{ns:Loc LblChipTemp}"></TextBlock>
                                        <TextBlock Text="{Binding Cam.CCDTemperature, StringFormat=\{0:#.00\}}" Margin="5,0,0,0" Visibility="{Binding Cam.Connected, Converter={StaticResource VisibilityConverter}}"/>
                                    </UniformGrid>
                                </UniformGrid>
                            </Border>
                            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0 0 0 1">
                                <UniformGrid Columns="2" >
                                    <UniformGrid Columns="2" Margin="0 6 0 6" VerticalAlignment="Center">
                                        <TextBlock Text="{ns:Loc LblTargetTemp}" />
                                        <TextBlock Text="{Binding Cam.SetCCDTemperature, StringFormat=\{0:#.00\}}" Margin="5,0,0,0" MinWidth="20" Visibility="{Binding Cam.Connected, Converter={StaticResource VisibilityConverter}}"/>
                                    </UniformGrid>
                                </UniformGrid>
                            </Border>

                            <Grid VerticalAlignment="Bottom">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="40" />
                                </Grid.RowDefinitions>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="110" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock DockPanel.Dock="Left" Text="{ns:Loc LblTargetTemp}" VerticalAlignment="Center"></TextBlock>
                                    <Slider Grid.Column="1" Minimum="-50" Maximum="20" SmallChange="1" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Value="{Binding TargetTemp}" IsEnabled="{Binding CoolingRunning, Converter={StaticResource InverseBooleanConverter}}"></Slider>
                                    <TextBlock Grid.Column="2" DockPanel.Dock="Right" Text="{Binding TargetTemp, StringFormat=\{0:#.0\}}" VerticalAlignment="Center"></TextBlock>
                                </Grid>

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="110" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{ns:Loc LblDuration}" VerticalAlignment="Center"></TextBlock>
                                    <Slider Grid.Column="1" Minimum="0" Maximum="30" SmallChange="1" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Value="{Binding Duration}" IsEnabled="{Binding CoolingRunning , Converter={StaticResource InverseBooleanConverter}}"></Slider>
                                    <TextBlock Grid.Column="2" Text="{Binding Duration, StringFormat=\{0:#.0\}}" VerticalAlignment="Center"/>
                                </Grid>


                                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Text="{Binding CoolingProgress, StringFormat=\{0:#%\}}"  HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0" Visibility="{Binding CoolingRunning, Converter={StaticResource VisibilityConverter}}"/>
                                    <local:CancellableButtonView MyCommand="{Binding CoolCamCommand}" MyCancelCommand="{Binding CancelCoolCamCommand}" MyButtonImage="{StaticResource ThermometerSVG}" MyCancelButtonImage="{StaticResource CancelSVG}" HorizontalAlignment="Right" Width="40" Height="40" />
                                </StackPanel>

                            </Grid>
                        </StackPanel>

                        
                        
                        <local:CameraCoolingChartsView Margin="5" DataContext="{Binding}" Grid.Row="1"></local:CameraCoolingChartsView>
                        
                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>



    </Grid>
</UserControl>
