<Window x:Class="NINA.EquipmentChooser.EquipmentChooser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:ns="clr-namespace:NINA.Locale"
        xmlns:util="clr-namespace:NINA.Utility"
        xmlns:local="clr-namespace:NINA.View"
        mc:Ignorable="d" 
        d:DesignHeight="150" d:DesignWidth="300" 
        util:DialogCloser.DialogResult="{Binding DialogResult}" 
        ResizeMode="NoResize" Height="150" Width="300"
        Style="{StaticResource NoResizeWindow}">

    <Grid Background="{StaticResource BackgroundBrush}" Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="40" />
            </Grid.ColumnDefinitions>
            <ComboBox MinHeight="40" ItemsSource="{Binding Devices}" SelectedItem="{Binding SelectedDevice}" SelectedValuePath="Name" DisplayMemberPath="Name"  ></ComboBox>
            <Button Grid.Column="1" Width="40" Height="40"  Command="{Binding SetupDialogCommand}"  IsEnabled="{Binding SelectedDevice.HasSetupDialog}">
                <Button.ToolTip>
                    <ToolTip ToolTipService.ShowOnDisabled="False">
                        <TextBlock Text="{ns:Loc LblSettings}" />
                    </ToolTip>
                </Button.ToolTip>
                <Grid>
                    <Path Fill="{StaticResource ButtonForegroundBrush}" Data="{StaticResource SettingsSVG}" Stretch="Uniform" Margin="5">
                    </Path>
                </Grid>
            </Button>
        </Grid>
        <UniformGrid Columns="2" Grid.Row="1">
            <Button IsDefault="True" Click="ButtonOK_Click">
                <TextBlock Foreground="{StaticResource ButtonForegroundBrush}" Text="{ns:Loc LblOK}">
                </TextBlock>
            </Button>
            <Button IsCancel="True">
                <TextBlock Foreground="{StaticResource ButtonForegroundBrush}" Text="{ns:Loc LblCancel}">
                </TextBlock>
            </Button>
        </UniformGrid>
    </Grid>
</Window>
