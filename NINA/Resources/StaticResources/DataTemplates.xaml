<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:NINA.Resources.StaticResources"
                    xmlns:ns="clr-namespace:NINA.Locale"
                    xmlns:ninactrl="clr-namespace:NINACustomControlLibrary;assembly=NINACustomControlLibrary"
                    xmlns:rotator="clr-namespace:NINA.Model.MyRotator"
                    xmlns:view="clr-namespace:NINA.View"
                    xmlns:vm="clr-namespace:NINA.ViewModel"
                    xmlns:fw="clr-namespace:NINA.ViewModel.FlatWizard">

    <DataTemplate DataType="{x:Type vm:MeridianFlipVM}">
        <view:MeridianFlipView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:VersionCheckVM}">
        <view:VersionCheckView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:ProfileSelectVM}">
        <view:ProfileSelectView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:AutoFocusVM}">
        <view:AutoFocusChart />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:PlatesolveVM}">
        <view:PlateSolveView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type rotator:ManualRotator}">
        <view:ManualRotatorView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:AberrationInspectorVM}">
        <view:AberrationInspectorView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:TelescopeLatLongSyncVM}">
        <view:TelescopeLatLongSyncView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type fw:FlatWizardUserPromptVM}">
        <view:FlatWizardUserPrompt />
    </DataTemplate>

    <DataTemplate DataType="{x:Type fw:FlatWizardFilterSettingsWrapper}">
        <StackPanel Orientation="Vertical">
            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Margin="0,0,0,5">
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               VerticalAlignment="Center" Text="{ns:Loc LblFlatMinExposureTime}" TextWrapping="WrapWithOverflow" />
                    <TextBox Grid.Row="0" Grid.Column="1"
                        Text="{Binding Settings.MinFlatExposureTime, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource DecimalToSecondsConverter}}" />
                    <ninactrl:TickSlider Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                        ActualValue="{Binding Settings.MinFlatExposureTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        ActualValueMinimum="{Binding Source={StaticResource AppVM}, Path=CameraVM.Cam.ExposureMin, FallbackValue=0.00025}"
                        ActualValueMaximum="{Binding Source={StaticResource AppVM}, Path=CameraVM.Cam.ExposureMax, FallbackValue=30}"
                        InitialSpeedTickValue="0.5" SpeedTickPercentageChangePerTick="0.9" MaxActualValueIncreasePerTick="1" />
                </Grid>
            </Border>
            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Margin="0,0,0,5">
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               VerticalAlignment="Center" Text="{ns:Loc LblFlatMaxExposureTime}" TextWrapping="WrapWithOverflow" />
                    <TextBox Grid.Row="0" Grid.Column="1"
                        Text="{Binding Settings.MaxFlatExposureTime, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource DecimalToSecondsConverter}}" />
                    <ninactrl:TickSlider Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                        ActualValue="{Binding Settings.MaxFlatExposureTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        ActualValueMinimum="{Binding Source={StaticResource AppVM}, Path=CameraVM.Cam.ExposureMin, FallbackValue=0.00025}"
                        ActualValueMaximum="{Binding Source={StaticResource AppVM}, Path=CameraVM.Cam.ExposureMax, FallbackValue=30}"
                        InitialSpeedTickValue="0.5" SpeedTickPercentageChangePerTick="0.9" MaxActualValueIncreasePerTick="1" />
                </Grid>
            </Border>
            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Margin="0,0,0,5">
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               VerticalAlignment="Center" Text="{ns:Loc LblFlatStepSize}" TextWrapping="WrapWithOverflow" />
                    <TextBox Grid.Row="0" Grid.Column="1"
                        Text="{Binding Settings.StepSize, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource DecimalToSecondsConverter}}" />
                    <Slider Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                        Value="{Binding Settings.StepSize, UpdateSourceTrigger=PropertyChanged}" Minimum="0.00025" Maximum="3" />
                </Grid>
            </Border>
            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Margin="0,0,0,5">
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               VerticalAlignment="Center" Text="{ns:Loc LblFlatHistogramMeanTarget}" TextWrapping="WrapWithOverflow" />
                    <TextBlock Grid.Row="0" Grid.Column="1"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Text="{Binding HistogramMeanTargetADU, Mode=OneWay}" />
                    <TextBox Grid.Row="0" Grid.Column="2"
                        Text="{Binding Settings.HistogramMeanTarget, UpdateSourceTrigger=PropertyChanged, StringFormat=P0}" />
                    <Slider Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                        Value="{Binding Settings.HistogramMeanTarget, UpdateSourceTrigger=PropertyChanged}" Minimum="0.1" Maximum="0.9" IsSnapToTickEnabled="True" TickFrequency="0.05" />
                </Grid>
            </Border>
            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Margin="0,0,0,5">
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               VerticalAlignment="Center" Text="{ns:Loc LblFlatHistogramTolerance}" TextWrapping="WrapWithOverflow" />
                    <TextBlock Grid.Row="0" Grid.Column="1"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Text="{Binding HistogramToleranceADU, Mode=OneWay}" />
                    <TextBox Grid.Row="0" Grid.Column="2"
                        Text="{Binding Settings.HistogramTolerance, UpdateSourceTrigger=PropertyChanged, StringFormat=P0}" />
                    <Slider Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                        Value="{Binding Settings.HistogramTolerance, UpdateSourceTrigger=PropertyChanged}" Minimum="0.1" Maximum="0.5" IsSnapToTickEnabled="True" TickFrequency="0.05" />
                </Grid>
            </Border>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>