        <equip:ArteskyFlatBoxSetupView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type safety:SafetyMonitorSimulator}">
        <safety:SafetyMonitorSimulatorSetup />
    </DataTemplate>
