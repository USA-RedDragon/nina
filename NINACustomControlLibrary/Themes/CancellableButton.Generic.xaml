<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:NINACustomControlLibrary"
                    xmlns:converters="clr-namespace:NINACustomControlLibrary.Converters">

    <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
    <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    <BooleanToVisibilityConverter x:Key="VisibilityConverter"/>

    <Style TargetType="{x:Type local:CancellableButton}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:CancellableButton}">
                    <Grid x:Name="LayoutRoot">
                        <Grid Visibility="{Binding Command.Execution, 
                                                   Converter={StaticResource NullToVisibilityConverter},
                                                   RelativeSource={RelativeSource AncestorType={x:Type local:CancellableButton}}}"  >
                            <Button Command="{TemplateBinding CancelCommand}"                                     
                                    Visibility="{Binding Command.Execution.IsNotCompleted, 
                                                      Converter={StaticResource VisibilityConverter},
                                                      RelativeSource={RelativeSource AncestorType={x:Type local:CancellableButton}}}">
                                <Path Fill="{TemplateBinding ButtonForegroundBrush}" 
                                      Data="{TemplateBinding CancelButtonImage}" 
                                      Width="40" Stretch="Uniform" Margin="5" RenderTransformOrigin="0.5,0.5">
                                </Path>
                            </Button>
                        </Grid>
                        <Button  Command="{TemplateBinding Command}" 
                                 
                                 Visibility="{Binding Command.Execution.IsNotCompleted, 
                                                      Converter={StaticResource InverseBoolToVisibilityConverter},
                                                      RelativeSource={RelativeSource AncestorType={x:Type local:CancellableButton}}}">
                            <Button.ToolTip>
                                <ToolTip ToolTipService.ShowOnDisabled="True" >
                                    <TextBlock Text="{TemplateBinding ToolTip}" />
                                </ToolTip>
                            </Button.ToolTip>
                            <Grid>
                                <Path Fill="{TemplateBinding ButtonForegroundBrush}" 
                                      Data="{TemplateBinding ButtonImage}" 
                                      Width="40" Stretch="Uniform"  Margin="5" RenderTransformOrigin="0.5,0.5">
                                </Path>
                                <TextBlock Text="{TemplateBinding ButtonText}" 
                                           Foreground="{TemplateBinding ButtonForegroundBrush}" />
                            </Grid>

                        </Button>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>